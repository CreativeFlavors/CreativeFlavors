        .switch {
            position: relative;
            display: inline-block;
            width: 33px;
            height: 16px;
            background-color: #198754;
            border-radius: 20px;
            transition: all 0.3s;
        }

            .switch::after {
                content: '';
                position: absolute;
                width: 10px;
                height: 10px;
                border-radius: 50%;
                background-color: white;
                top: 3px;
                left: 5px;
                transition: all 0.3s;
            }

        .checkbox:checked + .switch::after {
            left: 18px;
        }

        .checkbox:checked + .switch {
            background-color: #dc3545;
        }

        .checkbox {
            display: none;
        }
    </style>

