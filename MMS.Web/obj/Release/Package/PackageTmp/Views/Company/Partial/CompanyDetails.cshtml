@model MMS.Web.Models.CompanyModel.CompanyModel

@{

    ViewBag.Title = "Company";
    // Layout = "~/Views/Shared/_HeaderFooterNavLayout.cshtml";
}

<style>
    .resize-txtarea textarea{resize:none;}
</style>

    <div class="right-form-section clearfix">
        <form role="form" class="form-inline">
            <div class="container-fluid">
                <div class="row">

                    <div class="col-xs-12">
                        <div class="field-section">
                            <div class="form-group">
                                <div class="col-md-3 col-sm-3 col-lg-3 col-xs-12">
                                    <label class="form-label" for="text"> Store</label>
                                </div>

                                <div class="col-md-9 col-sm-9 col-lg-9 col-xs-12">
                                  
                                    @Html.DropDownListFor(m => m.StoreName, MMS.Web.ExtensionMethod.HtmlHelper.Store(), new { @class = "select-style text-field StoreName" })
                                </div>
                            </div>
                        </div>
                        <div class="field-section">
                            <div class="form-group">
                                <div class="col-md-3 col-sm-3 col-lg-3 col-xs-12">
                                    <label class="form-label" for="text"> Name</label>
                                </div>

                                <div class="col-md-9 col-sm-9 col-lg-9 col-xs-12">
                                    @Html.HiddenFor(x => x.CompanyCodePK)
                                    @Html.TextBoxFor(m => m.SupplierName, new { @class = "form-control text-field" })
                                </div>
                            </div>
                        </div>
                        <div class="field-section">
                            <div class="form-group">
                                <div class="col-md-3 col-sm-3 col-lg-3 col-xs-12">
                                    <label class="form-label" for="text">City</label>
                                </div>
                                <div class="col-md-9 col-sm-9 col-lg-9 col-xs-12">
                                    @Html.TextBoxFor(m => m.City, new { @class = "form-control text-field" })
                                </div>
                            </div>
                        </div>
                        <div class="field-section">
                            <div class="form-group">
                                <div class="col-md-3 col-sm-3 col-lg-3 col-xs-12">
                                    <label class="form-label" for="text">Address</label>
                                </div>
                                <div class="col-md-9 col-sm-9 col-lg-9 col-xs-12 resize-txtarea">
                                    @Html.TextAreaFor(m => m.Address, new { @class = "form-control text-field" })
                                </div>
                            </div>
                        </div>
                        <div class="field-section">
                            <div class="form-group">
                                <div class="col-md-3 col-sm-3 col-lg-3 col-xs-12">
                                    <label class="form-label" for="text">DeliverTerms</label>
                                </div>
                                <div class="col-md-9 col-sm-9 col-lg-9 col-xs-12 resize-txtarea">
                                    @Html.TextAreaFor(m => m.DeliverTerms, new { @class = "form-control text-field" })
                                </div>
                            </div>
                        </div>
                        <div class="field-section">
                            <div class="form-group">
                                <div class="col-md-3 col-sm-3 col-lg-3 col-xs-12">
                                    <label class="form-label" for="text">TermsConditions</label>
                                </div>
                                <div class="col-md-9 col-sm-9 col-lg-9 col-xs-12">
                                    @Html.TextAreaFor(m => m.TermsConditions, new { @class = "form-control text-field" })
                                </div>
                            </div>
                        </div>
                        <div class="field-section">
                            <div class="form-group">
                                <div class="col-md-3 col-sm-3 col-lg-3 col-xs-12">
                                    <label class="form-label" for="text">Company Name</label>
                                </div>
                                <div class="col-md-9 col-sm-9 col-lg-9 col-xs-12">
                                    @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control text-field" })
                                </div>
                            </div>
                        </div>
                        <div class="field-section">
                            <div class="form-group">
                                <div class="col-md-3 col-sm-3 col-lg-3 col-xs-12">
                                    <label class="form-label" for="text">Phone</label>
                                </div>
                                <div class="col-md-9 col-sm-9 col-lg-9 col-xs-12">
                                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control text-field" })
                                </div>
                            </div>
                        </div>
                        <div class="field-section">
                            <div class="form-group">
                                <div class="col-md-3 col-sm-3 col-lg-3 col-xs-12">
                                    <label class="form-label" for="text">Payment Terms</label>
                                </div>
                                <div class="col-md-9 col-sm-9 col-lg-9 col-xs-12 resize-txtarea">
                                    @Html.TextAreaFor(m => m.PaymentTerms, new { @class = "form-control text-field" })
                                </div>
                            </div>
                        </div>
                        <div class="field-section">
                            <div class="form-group">
                                <div class="col-md-3 col-sm-3 col-lg-3 col-xs-12 resize-txtarea">
                                    <label class="form-label" for="text">OtherTerms</label>
                                </div>
                                <div class="col-md-9 col-sm-9 col-lg-9 col-xs-12 resize-txtarea">
                                    @Html.TextAreaFor(m => m.OtherTerms, new { @class = "form-control text-field" })
                                </div>
                            </div>
                        </div>
                    </div>

                </div>


                <div class="row">
                    <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12 text-center" style="margin: 15px 0px;">
                        <input type="button" onclick="Cancel()" class="btn btn-default btn-style width-78" style="cursor: pointer;" title="Back" value="Back">
                        @if (Model != null && Model.CompanyCodePK != 0)
                        {

                            <input type="button" onclick="Save()" class="btn btn-default btn-style width-78" style="cursor: pointer;" id="ComponentMasterId" title="Update" value="Update">
                        }
                        else
                        {
                            <input type="button" onclick="Save()" class="btn btn-default btn-style width-78" style="cursor: pointer;" title="Save" value="Save">
                        }
                        <input type="button" onclick="Clear()" class="btn btn-default btn-style width-78" style="cursor: pointer;" title="Clear" value="Clear">
                    </div>
                </div>
            </div>
        </form>
    </div>
<script>
    $(document).ajaxStart(function () {
        $(".loader-overlay").css("display", "block");
    });

    $(document).ajaxComplete(function () {
        $(".loader-overlay").css("display", "none");
    });
    $(window).load(function () {
        $('.loader-overlay').fadeOut('fast');
    });

</script>
   

