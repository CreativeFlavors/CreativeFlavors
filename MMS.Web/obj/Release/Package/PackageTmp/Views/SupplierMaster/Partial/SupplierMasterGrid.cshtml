@model  IEnumerable<MMS.Web.Models.SupplierMasterModel.SupplierModel>
@{
    int currentPage = ViewBag.CurrentPage ?? 1;
    int pageSize = ViewBag.PageSize ?? 9;
    int totalItems = Model.Count();
    int startSerialNumber = (currentPage - 1) * pageSize + 1;
}



<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/css1/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css1/custom.css" rel="stylesheet" />
    <link href="~/Content/css1/responsive.css" rel="stylesheet" />
    <link href="~/Content/css1/variables.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
    <link href="~/Content/css1/Toast.css" rel="stylesheet" />

    <style>
        .manage_customers .table tr th, .manage_customers .table tr td, .common_Manage_subMerchant .table tr th, .common_Manage_subMerchant .table tr td {
            padding: 16px;
        }

        img#paynows {
            width: 26%;
        }

        .page-item.active .page-link {
            z-index: 3;
            color: #fff;
            background-color: #4472C4;
            border-color: #0d6efd;
        }

        .manage_customers_table_responsive, .reports .reports_table_responsive {
            padding: 1px 15px 13px;
            box-sizing: border-box;
            overflow-x: unset;
        }

        .sub_merchants .merchant_btn, .manage_customers .manage_customers_btn, .common_Manage_subMerchant .manage_customers_btn {
            background: #4472C4;
            border-radius: 5px;
            padding: 11px 61px;
            border: 1px solid transparent;
            font-style: normal;
            font-weight: 500;
        }
    </style>
</head>

<body>
    <div class="main-page">
        <div id="transaction_report" class="reports common_Manage_subMerchant">
            <div class="d-flex justify-content-between align-items-center manage_customers_head">
                <div class="manage_customers_main_head">
                    <h6 class="font-20">Supplier info</h6>
                </div>
                <div>
                    <a href="/SupplierMaster/SupplierMasterDetails">
                        <button type="button" class="manage_customers_btn font-15" id="add" style="color:white;">
                            ADD
                        </button>
                    </a>
                </div>
            </div>



            <div class="table-responsive reports_table_responsive">
                <div class="customer_manage_search_container">
                    <input type="text" class="font-14" name="search_manage_customers" id="customer_manage_search" placeholder="search by Supplier Name">
                </div>

                <div class="manage_customers_table_in_responsive" id="form">

                    <table class="table table-striped text-center">
                        <thead>
                            <tr class="font-16">
                                <th scope="col">
                                    <span>Si.No</span>
                                    <span>
                                        <span>
                                            <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                        </span>
                                    </span>

                                </th>

                                <th scope="col">
                                    <span>Supplier Name</span>
                                    <span>
                                        <span>
                                            <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                        </span>
                                    </span>

                                </th>

                                <th scope="col">
                                    <span>Supplier Code</span>
                                    <span>
                                        <span>
                                            <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                        </span>
                                    </span>

                                </th>




                                <th scope="col">
                                    <span>Telephone</span>
                                    <span>
                                        <span>
                                            <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                        </span>
                                    </span>

                                </th>



                                <th scope="col">
                                    <span>Email Contact</span>
                                    <span>
                                        <span>
                                            <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                        </span>
                                    </span>

                                </th>



                                <th scope="col">
                                    <span>Account Name</span>
                                    <span>
                                        <span>
                                            <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                        </span>
                                    </span>

                                </th>




                                <th scope="col">
                                    <span>Zip Code</span>
                                    <span>
                                        <span>
                                            <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                        </span>
                                    </span>

                                </th>

                                <th scope="col">
                                    <span>Status</span>
                                </th>

                            </tr>


                        </thead>
                        @if (Model != null && Model.Count() > 0)
                        {

                            <tbody>
                                @foreach (var suppplier in Model)
                                {

                                    <tr class="font-14">
                                        <td class="veh-1">@startSerialNumber</td>
                                        <td class="veh-2" style="width: 12%; text-align:left"> @suppplier.Suppliername</td>
                                        <td class="veh-2" style="width: 12%; text-align:left">@suppplier.suppliercode</td>
                                        <td class="veh-2" style="width: 12%; text-align:left">@suppplier.Telephone1</td>
                                        <td class="veh-2" style="width: 12%; text-align:left">@suppplier.EmailContact</td>
                                        <td class="veh-2" style="width: 12%; text-align:left">@suppplier.AccountName</td>
                                        <td class="veh-2" style="width: 12%; text-align:left">@suppplier.PhysicalCode</td>
                                        <td class="veh-4" style="width:12%;">
                                            <span class="table_icons">
                                                <img src="~/Content/assets/images/edit-icon.png" onclick="Edit('@suppplier.SupplierId')" />
                                            </span>
                                            <span class="table_icons">
                                                <img src="~/Content/assets/images/delete-icon.png" onclick="Delete('@suppplier.SupplierId')" />
                                            </span>
                                        </td>

                                    </tr>
                                    startSerialNumber++;
                                }
                            </tbody>
                        }

                    </table>
                </div>

                <div class="row manage_customer_show">
                    <div class="font-14 manage_customer_show_I col-xl-6">
                        <span>Showing</span>
                        <select class="form-select font-16" name="manage_customer_show_content" id="manage_customer_show_no" aria-label="select example">
                            <option value="15" @(ViewBag.PageSize == 15 ? "selected" : "")>15</option>
                            <option value="30" @(ViewBag.PageSize == 30 ? "selected" : "")>30</option>
                            <option value="45" @(ViewBag.PageSize == 45 ? "selected" : "")>45</option>
                            <option value="60" @(ViewBag.PageSize == 60 ? "selected" : "")>60</option>
                        </select>

                    </div>

                    <div class="col-xl-6 manage_customer_show_II">
                        <nav class="float-xl-end">
                            <ul class="pagination font-14">
                                <li class="page-item">
                                    <a href="" id="previousPage" class="page-link">Previous</a>
                                </li>
                                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                {
                                    <li class="page-item @(i == currentPage ? "active" : "")">
                                        <a href="" data-page="@i" class="page-link" id="Number">@i</a>
                                    </li>
                                }
                                <li class="page-item">
                                    <a class="page-link" id="nextPage" data-current-page="1" href="">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="toast"></div>



    <script src="~/Content/js/custom.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="~/Content/js/bootstrap.bundle.min.js"></script>

    <script>

        $(window).on("load", function () {
            $(".report-inner-section").addClass("transection");
            $("#suppliername").attr('checked', true);

        });

        var currentPage = @(currentPage);

          $(document).ready(function () {
              if (sessionStorage.getItem("showToast") === "success") {
                  showSuccessToast();
                  sessionStorage.removeItem("showToast");
              }
              else if (sessionStorage.getItem("showToast") === "updated") {
                  showupdateToast();
                  sessionStorage.removeItem("showToast");
              }
              else if (sessionStorage.getItem("showToast") === "deleted") {
                  showdeletedToast();
                  sessionStorage.removeItem("showToast");
              }
              $(document).on('change', '#manage_customer_show_no', function () {
                  var pageSize = parseInt($(this).val());
                  //var pageSize = this.value;
                  $.ajax({
                      type: 'GET',
                       url: '@Url.Action("SupplierMasterGrid", "SupplierMaster")',
                      data: { pageSize: pageSize },
                      success: function (data) {

                          $('.main-page').html(data);
                      }
                  });

              });

             //next page
              $(document).on('click', '#nextPage', function () {
                          //var currentPage = @(ViewBag.CurrentPage);
                  //var currentPage = parseInt('@ViewBag.CurrentPage');

                            var totalPages = parseInt('@ViewBag.TotalPages');
                             if (currentPage < totalPages) {
                              var nextPage = currentPage + 1;
                              $.ajax({
                                  type: 'GET',
                                  url: '@Url.Action("SupplierMasterGrid", "SupplierMaster")',
                                  data: { page: nextPage, pageSize: parseInt('@ViewBag.PageSize') },
                                  success: function (data) {
                                      $('.main-page').html(data);
                                      currentPage = nextPage;
                                      console.log(currentPage)
                                  }
                              });

                           }
              });


                //previous page
              $(document).on('click', '#previousPage', function () {
                  //var currentPage = parseInt('@ViewBag.CurrentPage');
                  if (currentPage > 1) {
                      var previousPage = currentPage - 1;
                      console.log(`Previous page: ${previousPage}`);
                      $.ajax({
                          type: 'GET',
                          url: '@Url.Action("SupplierMasterGrid", "SupplierMaster")',
                          data: { page: previousPage, pageSize: parseInt('@ViewBag.PageSize') },
                          success: function (data) {
                              $('.main-page').html(data);
                              currentPage = previousPage;
                              console.log('Preiouscurrentpage:$(currentPage)');
                          }
                      });
                  }
              });



             //for number list
              $(document).on('click', '#Number', function () {

                  //var page = $(this).data('page');
                  var pageNumber = $(this).attr('data-page');
                  currentPage = parseInt(pageNumber);
                  console.log(currentPage);
                  loadGridData(pageNumber);
                  });
          });

           function loadGridData(page) {

              $.ajax({
                  type: 'GET',
                  url: '@Url.Action("SupplierMasterGrid", "SupplierMaster")',
                  data: { page: page },
                  success: function (data) {
                      $('.main-page').html(data);
                  }
              });
            }

    </script>



    <script>
        //search
        $(document).ready(function () {
            $("#customer_manage_search").keyup(function () {

                var suppliersearch = $("#customer_manage_search").val();
                $.ajax({
                    type: 'GET',
                    url: '/SupplierMaster/Search',
                    data: { filter: suppliersearch },
                    contentType: 'application/json',
                    success: function (response) {
                        $("tbody").empty();
                        var count = 1;
                        $.each(response, function (i, item) {
                            $("tbody").append(`
                                        <tr class="font-14">
                                            <td class="veh1-5">${count}</td>
                                            <td class="veh1-5" style="width: 12%; text-align:left">${item.Suppliername}</td>
                                            <td class="veh1-5" style="width: 12%; text-align:left">${item.suppliercode}</td>
                                            <td class="veh1-5" style="width: 12%; text-align:left">${item.Telephone1}</td>
                                            <td class="veh1-5" style="width: 12%; text-align:left">${item.EmailContact}</td>
                                            <td class="veh1-5" style="width: 12%; text-align:left">${item.AccountName}</td>
                                            <td class="veh1-5" style="width: 12%; text-align:left">${item.PhysicalCode}</td>
                                            <td class="veh-4" style="width:12%;">
                                                <span class="table_icons">
                                                    <img src="/Content/assets/images/edit-icon.png" onclick="Edit('${item.SupplierId}')" />
                                                </span>
                                                <span class="table_icons">
                                                    <img src="/Content/assets/images/delete-icon.png" onclick="Delete('${item.SupplierId}')" />
                                                </span>
                                            </td>
                                        </tr>
                                    `);
                            count++;
                        });
                    }
                });
            });
        });
    </script>

    <script>
        //get supplier buy id

        function Edit(id) {
            $('.main-page').hide();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetSupplierById", "SupplierMaster")',
                data: { id: id },
                success: function (response) {
                    $(".main-page").html(response);
                    $(".main-page").show();
                }
            });
        }



        function Delete(id) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Delete", "SupplierMaster")',
                    data: { id: id },
                    success: function (response) {
                        sessionStorage.setItem("showToast", "deleted");
                        window.location.href = '/SupplierMaster/SupplierMaster';
                        return false;
                    }
                });
        }

    </script>

</body>
</html>

