@model MMS.Web.Models.JobworkModel.ProcessModel
@{
    int id = Model.ProcessId;
    Session["ProcessId"] = id;
}


<div class="header_list_tab  col-lg-12 col-md-12 col-sm-12  col-xs-12">
    <div class="col-lg-12 col-md-12 col-sm-12 col-12 no-padding">
        <div class="list_tab">
            <div class="title">
                Detail
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-md-12 col-sm-12  col-xs-12">
        <div class="button_tab  col-lg-12 col-md-12 col-sm-12 col-12 no-padding">
        </div>
    </div>
</div>

<div class="home_process_edit col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 block-section input_list_group">
        <div class="input_left col-lg-11 col-md-11 col-sm-12 no-padding">
            <div class="col-lg-3 col-md-3 col-sm-12">
                <div class="form_input_group">
                    <div class="form-group">
                        <label for="usr">Process Code</label>
                        @*<input type="text" class="form-control" id="Pro_code" placeholder="" value="PC 01">*@

                        @Html.TextBoxFor(m => m.ProcessCode, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-12">
                <div class="form_input_group">
                    <div class="form-group">
                        <label for="usr">Process Name</label>
                        @Html.HiddenFor(x => x.ProcessId)
                        @Html.TextBoxFor(m => m.ProcessName, new { @class = "form-control" })
                        @*<input type="text" class="form-control" id="Pro_Name" placeholder="" value="Measuring">*@
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-12">
                <div class="form_input_group check_mart">
                    <div class="checkbox-option">
                        <div class="form-group checkbox_tax">                        
                            @Html.CheckBoxFor(m => m.Ioinvolved,true)
                            <label for="Ioinvolved">IO Involed</label>

                        </div>
                    </div>
                </div>
            </div>
            <div class="input_empty col-lg-1 col-md-1 col-sm-12">

            </div>

        </div>
        <div class="init_action cntl_btn col-lg-12 col-md-12 col-sm-12">
            @if (Model != null && Model.ProcessId != 0)
            {
                <button class="btn green-btn" onclick="UpdateProcess()">Update</button>
            }
            else
            {
                <button class="btn green-btn " onclick="Save()">Save</button>
            }
                <button class="btn green-grey" onclick="Back()">Back</button>
        </div>
    </div>


</div>