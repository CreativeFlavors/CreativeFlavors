@model MMS.Web.Models.JobworkModel.UnitConvertionModel
@using MMS.Repository.Managers.JobWork;
@using MMS.Core.Entities.JobWork;
@{
    List<MMS.Core.Entities.JobWork.UnitConvertionMaster> UnitConvertionMaster = new List<MMS.Core.Entities.JobWork.UnitConvertionMaster>().ToList();
    Job_UnitConvertionManager Job_UnitConvertionManager = new Job_UnitConvertionManager();

}

<div class="veh-tablecont">
    <div class="header_list_tab  col-lg-12 col-md-12 col-sm-12  col-xs-12">
        <div class="col-lg-12 col-md-12 col-sm-12 col-12 no-padding">
            <div class="list_tab">
                <div class="title">
                    List
                </div>
                <button class="rt_add" onclick="AddUnitConvertion()">Add</button>
            </div>

        </div>
        <div class="col-lg-6 col-md-12 col-sm-12  col-xs-12">
            <div class="button_tab  col-lg-12 col-md-12 col-sm-12 col-12 no-padding">

            </div>
        </div>
    </div>

    <div class="process_master col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="col-xs-12 block-section">
            <div id="no-more-tables" class="col-xs-12 no-padding">
                <table id="example" class="col-md-12 table-striped table-condensed cf table-change home_dahboard home_process">
                    <thead>
                        <tr>
                            <th>Sl.No</th>
                            <th>UC Code.</th>
                            <th>Store Name From</th>
                            <th>Store Name To</th>
                            <th>Material Name From</th>
                            <th>Material Name To</th>
                            <th>Norms Calculation</th>
                            <th>Qty</th>
                            <th>Pairs</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="common-table-head">
                        @if (Model.UnitConvertionMasterList != null && Model.UnitConvertionMasterList.Count > 0)
                        {
                            int count = 1;

                            foreach (var operation in Model.UnitConvertionMasterList)
                            {
                                <tr>
                                    <td data-title="Si.No">@count</td>
                                    <td data-title="OperationType Code">@operation.UC_No_Code</td>
                                    <td data-title="OperationType Code">@operation.Store_id_from</td>
                                    <td data-title="OperationType Code">@operation.Store_id_to</td>
                                    <td data-title="OperationType Code">@operation.Material_id_From</td>
                                    <td data-title="OperationType Code">@operation.Material_id_To</td>

                                    <td data-title="OperationType Code">@operation.Value</td>
                                    <td data-title="OperationType Code">@operation.No_sheet</td>
                                    <td data-title="OperationType Code">@operation.Sheet_Value</td>
                                    <td data-title="Action">
                                        <span class="action-icons">

                                            <a><img onclick="Edit('@operation.UC_No_Id')" src="~/Scripts/Jobwork/images/edit.png"></a>
                                            <img onclick="Delete('@operation.UC_No_Id')" src="~/Scripts/Jobwork/images/delete.png">
                                        </span>
                                    </td>
                                </tr>
                                count++;
                            }

                        }
                        else
                        {
                            int count = 1;
                            foreach (var UnitConvertionMaster_ in UnitConvertionMaster)
                            {

                                <tr>
                                    <td class="veh-1">@count</td>
                                    <td class="veh-1" onclick="">@UnitConvertionMaster_.UC_No_Code/td>
                                    <td class="veh-1" onclick="">@UnitConvertionMaster_.Store_id_from/td>
                                    <td class="veh-1" onclick="">@UnitConvertionMaster_.Store_id_to/td>
                                    <td class="veh-1" onclick="">@UnitConvertionMaster_.Material_id_From/td>
                                    <td class="veh-1" onclick="">@UnitConvertionMaster_.Material_id_To/td>
                                    <td class="veh-3">@UnitConvertionMaster_.Value</td>
                                    <td class="veh-3">@UnitConvertionMaster_.No_sheet</td>
                                    <td class="veh-3">@UnitConvertionMaster_.Sheet_Value</td>

                                    <td data-title="IO involved">
                                        <div class="checkbox-option">
                                            <div class="flex_section">
                                                <div class="form-group checkbox_tax">
                                                    <input type="checkbox" id="tax3">
                                                    <label for="tax3"></label>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td data-title="Action">
                                        <span class="action-icons">
                                            <a href="Home_Process_Master_edit.html"><img src="~/Scripts/Jobwork/images/edit.png"></a>
                                            <img src="~/Scripts/Jobwork/images/delete.png">
                                        </span>
                                    </td>
                                </tr>
                                count++;
                            }

                            UnitConvertionMaster = null;
                        }
                        </>
                </table>
            </div>
        </div>

    </div>
</div>
<div id="EditUnitConvertionPartial">
    @*@Html.Partial("Partial/OperationMasterDetails", Model)*@
</div>
