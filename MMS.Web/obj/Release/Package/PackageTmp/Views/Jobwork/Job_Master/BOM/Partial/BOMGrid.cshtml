@model MMS.Web.Models.StockModel.BillOfMaterialModel
@using MMS.Repository.Managers;
@using MMS.Core.Entities
@{
    Layout = "";
}

<div class="veh-tablecont">
    <div class="header_list_tab  col-lg-12 col-md-12 col-sm-12  col-xs-12">
        <div class="col-lg-12 col-md-12 col-sm-12 col-12 no-padding">
            <div class="list_tab">
                <div class="title">
                    List
                </div>
                <button class="rt_add" onclick="Job_bomadd()">Add</button>
            </div>

        </div>
        <div class="col-lg-6 col-md-12 col-sm-12  col-xs-12">
            <div class="button_tab  col-lg-12 col-md-12 col-sm-12 col-12 no-padding">

            </div>
        </div>
    </div>

    <div class="process_master col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="col-xs-12 block-section">
                <div id="no-more-tables" class="col-xs-12 no-padding">
                    <table id="example" class="col-md-12 table-striped table-condensed cf table-change home_dahboard home_process">
                        <thead>
                            <tr>
                                <th>Sl.No</th>
                                <th> BOM NO</th>
                                <th> Buyer  Name</th>
                                <th> Buyer Norms</th>
                                <th>Date</th>
                                <th>Edit / Delete</th>
                            </tr>
                        </thead>
                        <tbody class="common-table-head">
                            @if (Model.BOMMaterialLists.Count > 0 && Model.BOMMaterialLists != null)
                            {

                                int count = 1;

                                foreach (var operation in Model.BOMMaterialLists)
                                {
                                    <tr>
                                        <td data-title="Si.No">@count</td>
                                        <td data-title="OperationType Code">@operation.BomNo</td>
                                        <td data-title="OperationType Code">@operation.ParentBomNo</td>
                                        <td data-title="OperationType Code">@operation.MaterialMasterId</td>
                                        <td data-title="OperationType Code">@operation.Date</td>
                                        <td data-title="Action">
                                            <span class="action-icons">

                                                <a><img onclick="Edit('@operation.BomId')" src="~/Scripts/Jobwork/images/edit.png"></a>
                                                <img onclick="Delete('@operation.BomId')" src="~/Scripts/Jobwork/images/delete.png">
                                            </span>
                                        </td>
                                    </tr>
                                    count++;
                                }

                            }
                            else
                            {
                                int count = 1;
                                foreach (var operation in Model.BOMMaterialLists)
                                {

                                    <tr>
                                        <td class="veh-1">@count</td>
                                        <td class="veh-1" onclick="">@operation.BomNo/td>
                                        <td class="veh-1" onclick="">@operation.ParentBomNo/td>
                                        <td class="veh-1" onclick="">@operation.MaterialMasterId/td>
                                        <td class="veh-1" onclick="">@operation.Date</td>


                                        <td data-title="Action">
                                            <span class="action-icons">
                                                <a href="Home_Process_Master_edit.html"><img src="~/Scripts/Jobwork/images/edit.png"></a>
                                                <img src="~/Scripts/Jobwork/images/delete.png">
                                            </span>
                                        </td>
                                    </tr>
                                    count++;
                                }

                                Model.BOMMaterialLists = null;
                            }
                            </>
                    </table>
                </div>
            </div>

        </div>
</div>
<div id="Edit_jobBOMPartial">
    @*@Html.Partial("Partial/OperationMasterDetails", Model)*@
</div>

