@model MMS.Web.Models.OperationMasterModel.OperationMasterModel
@using MMS.Repository.Managers;
@using MMS.Core.Entities;
@{
    List<MMS.Core.Entities.OperationMaster> Operationlist = new List<MMS.Core.Entities.OperationMaster>().ToList();
    OperationManager OperationManager = new OperationManager();

}
<div class="veh-tablecont">
    <div class="header_list_tab  col-lg-12 col-md-12 col-sm-12  col-xs-12">
        <div class="col-lg-12 col-md-12 col-sm-12 col-12 no-padding">
            <div class="list_tab">
                <div class="title">
                    List
                </div>
                <button class="rt_add" onclick="AddOperation()">Add</button>
            </div>

        </div>
        <div class="col-lg-6 col-md-12 col-sm-12  col-xs-12">
            <div class="button_tab  col-lg-12 col-md-12 col-sm-12 col-12 no-padding">

            </div>
        </div>
    </div>

    <div class="process_master col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="col-xs-12 block-section">
            <div id="no-more-tables" class="col-xs-12 no-padding">
                <table id="example" class="col-md-12 table-striped table-condensed cf table-change home_dahboard home_process">
                    <thead>
                        <tr>
                            <th>SI.No</th>
                            <th>OperationType Code</th>
                            <th>OperationType Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="common-table-head">
                        @if (Model.OperationMasterList != null && Model.OperationMasterList.Count > 0)
                        {
                            int count = 1;
                            if (Operationlist == null || Operationlist.Count == 0)
                            {
                                foreach (var operation in Model.OperationMasterList)
                                {
                                    <tr>
                                        <td data-title="Si.No">@count</td>
                                        <td data-title="OperationType Code">@operation.OperationTypeCode</td>
                                        <td data-title="OperationType Name">@operation.OperationName</td>


                                        <td data-title="Action">
                                            <span class="action-icons">

                                                <a><img onclick="Edit('@operation.OperationMasterId')" src="~/Scripts/Jobwork/images/edit.png"></a>
                                                <img onclick="Delete('@operation.OperationMasterId')" src="~/Scripts/Jobwork/images/delete.png">
                                            </span>
                                        </td>
                                    </tr>
                                    count++;
                                }
                            }
                        }
                        else
                        {
                            int count = 1;
                            foreach (var operation in Operationlist)
                            {

                                    <tr>
                                        <td class="veh-1">@count</td>
                                        <td class="veh-1" onclick="">@operation.OperationTypeCode/td>
                                        <td class="veh-3">@operation.OperationName</td>
                                        <td data-title="IO involved">
                                            <div class="checkbox-option">
                                                <div class="flex_section">
                                                    <div class="form-group checkbox_tax">
                                                        <input type="checkbox" id="tax3">
                                                        <label for="tax3"></label>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td data-title="Action">
                                            <span class="action-icons">
                                                <a href="Home_Process_Master_edit.html"><img src="~/Scripts/Jobwork/images/edit.png"></a>
                                                <img src="~/Scripts/Jobwork/images/delete.png">
                                            </span>
                                        </td>
                                    </tr>
                                count++;
                            }

                            Operationlist = null;
                        }
                            </>
                    </table>
                </div>
            </div>

        </div>
    </div>
