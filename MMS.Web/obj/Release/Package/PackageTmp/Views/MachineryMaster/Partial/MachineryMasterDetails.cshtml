@model MMS.Web.Models.MachineryMasterModel.MachineryMasterModel

@{
    int id = Model.MachineryMasterId;
    Session["MachineryMasterId"] = id;
}


<div class="popup-wrap edit-popup-wrap right-form-section clearfix" id="DivShow">

    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#step1">Machinery Master</a></li>
    </ul>
    <div class="tab-content">
        <div id="step1" class="tab-pane fade in active">
            <div class="container-fluid">

                <div class="row">
                    <div class="field-section">
                        <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12" style="margin-top: 15px;">
                            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 pad">
                                <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12 no-padding">
                                    <div class="field-section">
                                        <div class="form-group">
                                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12">
                                                <label for="text" class="form-label">Machine Code</label>
                                            </div>
                                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                                @Html.TextBoxFor(m => m.MachineCode, new { @class = "form-control text-field",@readonly=true })
                                                
                                            </div>
                                        </div>
                                                @Html.HiddenFor(x => x.MachineryMasterId)
                                    </div>
                                    <div class="field-section">
                                        <div class="form-group">
                                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12">
                                                <label for="text" class="form-label">Machine Name</label>
                                            </div>
                                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                                @Html.TextBoxFor(m => m.MachineName, new { @class = "form-control text-field" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="field-section">
                                        <div class="form-group">
                                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12">
                                                <label for="text" class="form-label">Make</label>
                                            </div>
                                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                                @Html.TextBoxFor(m => m.Make, new { @class = "form-control text-field" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="field-section">
                                        <div class="form-group">
                                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12">
                                                <label for="text" class="form-label">Model</label>
                                            </div>
                                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                                @Html.TextBoxFor(m => m.Model, new { @class = "form-control text-field" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="field-section">
                                        <div class="form-group">
                                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12">
                                                <label for="text" class="form-label">Asset List no</label>
                                            </div>
                                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                                @Html.TextBoxFor(m => m.AssesListNo, new { @class = "form-control text-field" })

                                            </div>
                                        </div>
                                    </div>
                                    <div class="field-section">
                                        <div class="form-group">
                                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12">
                                                <label for="text" class="form-label">Machine Serial No</label>
                                            </div>
                                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                                @Html.TextBoxFor(m => m.MachineSerialNo, new { @class = "form-control text-field" })

                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12 no-padding">

                                    <div class="field-section">
                                        <div class="form-group">
                                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12">
                                                <label for="text" class="form-label">Kilowatt</label>
                                            </div>
                                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                                @Html.TextBoxFor(m => m.Kilowatt, new { @class = "form-control text-field" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="field-section">
                                        <div class="form-group">
                                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12">
                                                <label for="text" class="form-label">Horse Power(HP)</label>
                                            </div>
                                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                                @Html.TextBoxFor(m => m.HorsePower, new { @class = "form-control text-field" })

                                            </div>
                                        </div>
                                    </div>
                                    <div class="field-section">
                                        <div class="form-group">
                                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12">
                                                <label for="text" class="form-label">Volt </label>
                                            </div>
                                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                                @Html.TextBoxFor(m => m.Volt, new { @class = "form-control text-field" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="field-section">
                                        <div class="form-group">
                                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12">
                                                <label for="text" class="form-label">Operation Useed For</label>
                                            </div>
                                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                                @Html.DropDownListFor(m => m.OperationUsedFor, MMS.Web.ExtensionMethod.HtmlHelper.OperationName(), new { @class = "select-style text-field" })
                                                <b><label for="multipleOperations">Multiple Operations</label></b>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="field-section">
                                        <div class="form-group">
                                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12">
                                                <label for="text" class="form-label">Specification</label>
                                            </div>
                                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                                @Html.TextBoxFor(m => m.Specification, new { @class = "form-control text-field" })
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12 no-padding">
                                    <div class="field-section">
                                        <div class="form-group">
                                            <div class="col-md-3 col-sm-3 col-lg-3 col-xs-12">
                                            </div>
                                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                                <div id="showImage">
                                                     <img id="ImgPrv" src="~/content/images/man-image.png"   class="img-responsive img-rounded">
                                                </div>
                                                @if (Model != null && Model.Image != "" && Model.Image != null)
                                                {
                                                    string scr = "../Images/MachinaryImage/" + Model.Image;
                                                    <input type="file" id="UploadImg" onchange="ShowImagePreview(this);" onclick="hideimage(this);" >
                                                    <img id="imgupdate" src="@scr" alt="Image" style="float: right;height: 34px;" />
                                                }
                                                else
                                                {
                                                    
                                                    <input type="file" id="UploadImg" onchange="ShowImagePreview(this);">
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-footer">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12 text-center">

                <input type="button" onclick="Cancel()" class="btn btn-default btn-style" style="cursor: pointer;" title="Back" value="Back">
                @if (Model != null && Model.MachineryMasterId != 0)
                {

                    <input type="button" onclick="Update()" style="cursor: pointer;" class="btn btn-default btn-style" id="MachineryMasterId" title="Update" value="Update">
                }
                else
                {
                    <input type="button" onclick="Save()" style="cursor: pointer;" class="btn btn-default btn-style" title="Save" value="Save">
                }
                <input type="button" onclick="Clear()" class="btn btn-default btn-style" style="cursor: pointer;" title="Clear" value="Clear">
            </div>
        </div>
    </div>

    
</div>

<script type="text/javascript">
    $(document).ajaxStart(function () {
        $(".loader-overlay").css("display", "block");
    });

    $(document).ajaxComplete(function () {
        $(".loader-overlay").css("display", "none");
    });
    $(window).load(function () {
        $('.loader-overlay').fadeOut('fast');
    });

    function ShowImagePreview(input)
    {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#ImgPrv').prop('src', e.target.result)
                        .width(100)
                        .height(75);
                };
                reader.readAsDataURL(input.files[0]);
                }
        }

        function hideimage(input)
        {
            $('#imgupdate').hide()
        }

</script>
 <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<link href="~/Scripts/EasyAutocomplete-1.3.5/comboStyles.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script src="~/Scripts/EasyAutocomplete-1.3.5/ComboBox.js"></script>
<script>
             $("#OperationUsedFor").combobox();
</script>

