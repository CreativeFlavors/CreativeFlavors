                                <ul>
                                    <li id="libilingadd1">@Model.Billingadd</li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-6 col-sm-12" id="billingadd">
                            <div class="input-part">
                                <h5 class="light-text">Shipping-Address</h5>
                                <ul>
                                    <li id="libilingad1">@Model.shippingadd</li>
