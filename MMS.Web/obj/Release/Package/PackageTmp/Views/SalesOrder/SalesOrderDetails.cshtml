    <script>
        new TomSelect("#ProductName", {
            create: false,
            sortField: {
                field: "text",
                direction: "asc"
            }
        });
        new TomSelect("#BuyerName", {
            create: false,
            sortField: {
                field: "text",
                direction: "asc"
            }
        });
        new TomSelect("#currencyOption", {
            create: false,
            sortField: {
                field: "text",
                direction: "asc"
            }
        });

        $(document).ready(function () {
            if (sessionStorage.getItem("showToast") === "deleted") {
                showdeletedToast();
                sessionStorage.removeItem("showToast");
            }
            $("#currencyOption").change(function () {
                var currencyOption = $('#currencyOption').val();
                //var currencyOption = $(this).is(':checked') ? $('.switch-left').attr('value') : $('.switch-right').attr('value');
                var quantity = $('#quantity').val();
                var ProductID = $("#ProductName").val();
                var buyerid = $("#BuyerName").val();
                var discountperid = $('#discountperid').val();
                var salesordernumber = $("#salesordernumber").val();
                var formdata = new FormData();
                formdata.append("salesordernumber", salesordernumber);
                formdata.append("buyerid", buyerid);
                formdata.append("ProductID", ProductID);
                formdata.append("discountperid", discountperid);
                formdata.append("quantity", quantity);
                formdata.append("currencyOption", currencyOption);
                if (discountperid != "" || quantity != "") {
                    $.ajax({
                        url: '/SalesOrder/Calculationdetails',
                        type: 'POST',
                        contentType: false,
                        processData: false,
                        dataType: 'html',
                        data: formdata,
                        success: function (response) {
                            $("#subtotal1").text("");
                            $("#TaxValue1").text("");
                            $("#Grandtotal1").text("");
                            $("#Total_Price").val("");
                            $("#Total_Subtotal").val("");
                            $("#Total_discountval").val("");
                            $("#Total_TaxValue").val("");
                            $("#Total_Grandtotal").val("");
                            var data = JSON.parse(response);
                            $("#subtotal1").text(data.Subtotal);
                            $("#TaxValue1").text(data.TaxValue);
                            $("#Grandtotal1").text(data.Grandtotal);
                            $("#docdiscountvalue1").text(data.discountvalue);
                            $("#Total_Price").val(data.Total_Price);
                            $("#Total_Subtotal").val(data.Total_Subtotal);
                            $("#Total_discountval").val(data.Total_discountval);
                            $("#Total_TaxValue").val(data.Total_TaxValue);
                            $("#Total_Grandtotal").val(data.Total_Grandtotal);
                        }

                    });
                }
                else {
                    $("#subtotal1").text("");
                    $("#TaxValue1").text("");
                    $("#Grandtotal1").text("");
                    $("#Total_Price").val("");
                    $("#docdiscountvalue1").text("");
                    $("#Total_Subtotal").val("");
                    $("#Total_discountval").val("");
                    $("#Total_TaxValue").val("");
                    $("#Total_Grandtotal").val("");
                }
            });

            $("#BuyerNameDropdown").keyup(function () {
                var BuyerName = $("#BuyerNameDropdown").val();

                $.ajax({
                    type: 'GET',
                    url: '/SalesOrder/buyernamesearch',
                    data: { filter: BuyerName },
                    contentType: 'application/json',
                    success: function (values) {
                        $("#BuyerName").empty();

                        $.each(values, function (i, item) {
                            $("#BuyerName").append(
                                $('<option></option>').val(item.BuyerMasterId).html(item.BuyerFullName));
                        });
                    }
                });
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $("#ProductName").change(function () {
