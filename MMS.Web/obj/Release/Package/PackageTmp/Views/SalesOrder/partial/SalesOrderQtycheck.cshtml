@model MMS.Web.Models.Salesorders
@using MMS.Repository.Managers

@{
    int a = 0;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/css1/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css1/custom.css" rel="stylesheet" />
    <link href="~/Content/css1/responsive.css" rel="stylesheet" />
    <link href="~/Content/css1/variables.css" rel="stylesheet" />
    <style>
        .modal-content {
            position: relative;
            display: flex;
            margin-left: -59%;
            flex-direction: column;
            width: 211%;
            pointer-events: auto;
            background-color: #fff;
            background-clip: padding-box;
            border: 1px solid rgba(0, 0, 0, .2);
            border-radius: .3rem;
            outline: 0;
        }

        table, th, td {
            padding: 1%;
        }

        #table-wrapper {
            position: relative;
        }

        #table-scroll {
            height: 247px;
            overflow: auto;
            /*            margin-top: 20px;
        */
        }

        #table-wrapper table {
            width: 100%;
        }
        /*    #table-wrapper table thead th .text {
                        position: absolute;
                        top: -20px;
                        z-index: 2;
                        height: 20px;
                        width: 35%;
                        border: 2px solid black;
                    }*/
    </style>

</head>

<body>

    <div class="edit-section">
        <div class="d-flex justify-content-end">
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <h1 class="modal-title fs-5" id="exampleModalLabel">View Order Details</h1>
        <div>
            <table style="width: 100%; border: 1px solid white; border-collapse: collapse; text-align: center; color: #969696;" class=" list1 mt-4">
                <tr>
                    <th>Order No</th>
                    <th>Buyer Name</th>
                    <th>Product Item</th>
                    <th>Product Name</th>
                    <th>Product Price</th>
                    <th>Order Date</th>
                    <th>Order Time</th>
                    <th>BOM No</th>
                </tr>
                <tr>
                    <td>@Model.SalesorderId</td>
                    <td>@Model.BuyerMaster.BuyerFullName</td>
                    <td>@Model.quantity</td>
                    <td>@Model.product.ProductName</td>
                    <td>@Model.Grandtotal</td>
                    <td>@Model.salesorderdate.ToString("dd/MM/yyyy")</td>
                    <td>@Model.salesorderdate.ToString("hh:mm tt")</td>
                    <td>@Model.product.BomNo</td>
                </tr>
            </table>
        </div>
        <p class="modal-title fs-4" id="list2">Material List</p>
        <div id="table-wrapper">
            <div id="table-scroll">
                <table class="table table-bordered table-fixed" style="text-align: center; ">
                    <thead>
                        <tr>
                            <th><span class="text">S.No</span></th>
                            <th><span class="text">Material Item</span></th>
                            <th><span class="text">Type</span></th>
                            <th><span class="text">Available ST</span></th>
                            <th><span class="text">Available Unit</span></th>
                            <th><span class="text">Consume</span></th>
                            <th><span class="text">Shortage</span></th>
                            <th><span class="text">Consume Unit</span></th>
                            <th><span class="text">Stage</span></th>
                            <th><span class="text">ETA</span></th>
                        </tr>
                    </thead>
                    <tbody>


                        @if (ViewBag.TotalList != null)
                        {
                            int count = 1;
                            foreach (var i in ViewBag.TotalList)
                            {

                                if (i.MaterialOpeningMaster != null)
                                {
                                    <tr>
                                        <td>@count</td>
                                        <td>@i.MaterialOpeningMaster.MaterialNames</td>
                                        <td>MAT</td>
                                        <td>@i.MaterialOpeningMaster.Qty </td>
                                        <td>@i.MaterialOpeningMaster.UOMName</td>
                                        @if (i.MaterialOpeningMaster.Qty >= (i.RequiredQty * Model.quantity))
                                        {
                                            <td>@( (i.RequiredQty * Model.quantity).ToString("0.00") )</td>


                                        }
                                        else
                                        {
                                            <td style="color:red"><u>@((i.RequiredQty * Model.quantity))</u></td>
                                            a++;

                                        }
                                        @if (i.MaterialOpeningMaster.Qty >= (i.RequiredQty * Model.quantity))
                                        {
                                            <td style="color: #b9b1b1">0</td>
                                        }
                                        else
                                        {
                                            <td style="color:red"><u>@((i.RequiredQty * Model.quantity ) - (i.MaterialOpeningMaster.Qty) )</u></td>

                                        }

                                        <td>@i.MaterialOpeningMaster.UOMName </td>
                                        <td style="color: #b9b1b1">Null</td>
                                        <td style="color: #b9b1b1">Null</td>

                                        @*@if (i.MaterialOpeningMaster.Qty <= (i.RequiredQty * Model.quantity))
                                            {
                                                <td>  <button class="btn btn-danger" id="Invoice">Raise Po</button></td>
                                                                                        <td style="color:red"><u>@((i.RequiredQty * Model.quantity ?? 0).ToString("0.00"))</u></td>

                                            }
                                            else
                                            {
                                                <td style="color: #b9b1b1">Null</td>

                                            }*@
                                    </tr>
                                    count++;
                                }

                            }
                        }
                        else
                        {
                            <tr><td colspan="5">No data available</td></tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
        @if (a != 0)
        {
            <div class="d-flex justify-content-end mt-3">
                <button class="btn btn-danger" id="makepayment" onclick="Raise()">Raise Indent</button>

            </div>
        }
        else
        {
            <div class="d-flex justify-content-end mt-3">
                <button class="btn btn-success" id="makepayment" onclick="RaiseProduction()">Move to Production</button>

            </div>
        }
    </div>


    <script src="~/Content/js/custom.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="~/Content/js/bootstrap.bundle.min.js"></script>
    <script>
        function Raise() {
            var salesorderid = @Model.SalesorderId;
            $.ajax({
                type: 'POST',
                url: '/SalesOrder/Tempsalesorder',
                data: { id: salesorderid },
                success: function (data) {
                    if (data == 'Success') {
                        Swal.fire({
                            title: 'Success!!',
                            text: 'Successfully Raised the Indent!',
                            icon: 'success',
                            timer: 3000,
                            timerProgressBar: true,
                            showConfirmButton: false
                        });
                        setTimeout(function () {
                            location.href = "/SalesOrder/SalesOrderMaster";
                            return false;
                        }, 3000);


                    }
                    else {
                        Swal.fire("Alert", "Already This Material Moved to Indent!", "error");
                    }

                }
            });

        }
function RaiseProduction() {
    var salesorderid = @Model.SalesorderId;
    $.ajax({
        type: 'POST',
        url: '/SalesOrder/TempProductionstock',
        data: { id: salesorderid },
        success: function (data) {
            if (data == 'Success') {
                Swal.fire({
                    title: 'Success!!',
                    text: 'Fineshed Goods Successfully Moved To Production !',
                    icon: 'success',
                    timer: 3000,
                    timerProgressBar: true,
                    showConfirmButton: false
                });
                setTimeout(function () {
                    location.href = "/SalesOrder/SalesOrderMaster";
                    return false;
                }, 3000);


            }
            else {
                Swal.fire("Alert", "Already This Material Moved to Production!", "error");
            }

        }
    });

}
    </script>

</body>

</html>
