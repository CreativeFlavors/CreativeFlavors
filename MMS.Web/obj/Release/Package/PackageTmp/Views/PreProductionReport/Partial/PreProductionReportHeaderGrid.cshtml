@model MMS.Web.Models.Temp_Production.Temp_ProductionModel
@using MMS.Repository.Managers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/css1/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css1/custom.css" rel="stylesheet" />
    <link href="~/Content/css1/responsive.css" rel="stylesheet" />
    <link href="~/Content/css1/variables.css" rel="stylesheet" />
    <link href="~/Content/css1/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
        input[type=text] {
            padding: 12px;
            font-size: 17px;
            border: 1px solid grey;
            width: 80%;
        }

        .buttonone {
            float: right;
            width: 20%;
            padding: 12px;
            background: #2196F3;
            color: white;
            font-size: 17px;
            border: 1px solid grey;
            border-left: none;
            cursor: pointer;
        }

        .page-item.active .page-link {
            z-index: 3;
            color: #fff;
            background-color: #4472C4;
            border-color: #0d6efd;
        }

        .manage_customers .table tr th, .manage_customers .table tr td, .common_Manage_subMerchant .table tr th, .common_Manage_subMerchant .table tr td {
            padding: 6px;
        }
    </style>
</head>
<body>

    <div class="main-page">
        <div id="transaction_report" class="reports common_Manage_subMerchant">
            <nav class="reports_customers_head d-flex justify-content-between" aria-label="breadcrumb">
                <div>
                    <ol class="breadcrumb font-20">
                        <li class="breadcrumb-item " aria-current="page">Pre-Production</li>
                    </ol>
                </div>
                <div class="checkbox-wrapper-10">
                    <input class="tgl tgl-flip" id="cb5" type="checkbox" checked />
                    <label class="tgl-btn" data-tg-off="Details" data-tg-on="Summary" for="cb5"></label>
                </div>

            </nav>

            <div class="table-responsive reports_table_responsive">
                <ol class="breadcrumb font-20 d-flex justify-content-center">
                    <li class="breadcrumb-item " aria-current="page" style="font-size: 112%;">Pre-Production Summary</li>
                </ol>
                <div class="customer_manage_search_containers" style="width:40%;">
                    <input type="text" placeholder="Search by Product Name" id="SearchID" name="search2">
                    <button class="buttonone" onclick="Search()" title="Filter" type="submit"><i class="fa fa-search"></i></button>

                </div>
                <div class="manage_customers_table_in_responsive mt-3" id="form">
                    <table class="table table-striped text-center">
                        <thead>
                            <tr class="font-16">
                                <th scope="col">
                                    <span id="add">Si.No</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>
                                <th scope="col">
                                    <span>SalesOrder No</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>

                                <th scope="col">
                                    <span>Buyer Name</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>

                                <th scope="col">
                                    <span>Product Name</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>
                                <th scope="col">
                                    <span>Product Item</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>
                                <th scope="col">
                                    <span>Product Type</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>
                                <th scope="col">
                                    <span>Production Type</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>
                                @*<th scope="col">
                                        <span>Discount</span>
                                        <span>
                                            <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                        </span>
                                    </th>
                                    <th scope="col">
                                        <span>Sub Total</span>
                                        <span>
                                            <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                        </span>
                                    </th>

                                    <th scope="col">
                                        <span>Tax Amount</span>
                                        <span>
                                            <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                        </span>
                                    </th>
                                    <th scope="col">
                                        <span>Total Price</span>  <span>
                                            <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                        </span>
                                    </th>
                                    <th scope="col">
                                        <span>Stock/Qty</span>
                                    </th>*@
                            </tr>
                        </thead>
                        @if (ViewBag.Productions != null)
                        {
                            <tbody>
                                @{
                                    int currentPage = ViewBag.CurrentPage ?? 1;
                                    int pageSize = ViewBag.PageSize ?? 8;
                                    int totalItems = ViewBag.Productions.Count;
                                    int startSerialNumber = (currentPage - 1) * pageSize + 1;
                                }
                                @foreach (var item in ViewBag.Productions)
                                {
                                    <tr class="font-14">
                                        <td>@startSerialNumber</td>
                                        <td>@item.SalesOrderId</td>
                                        <td>@item.BuyerName</td>
                                        <td>@item.ProductName</td>
                                        <td>@item.ProductItem</td>
                                        <td>@item.ProductTypeName</td>
                                        <td style="background-color: @(item.ProductionType == "Production" ? "#c3e6cb" : "#f5c6cb");width: 6px;">@item.ProductionType</td>
                                        @*<td class="veh-1 edit-del-wrap">
                                                @if (@item.ProductionType == "Production")
                                                {
                                                    <a href="javascript:void(0)" onclick="Edit('@item.ProductionId', true)" class="watchlist-edit" title="Edit"><img src="~/Content/assets/images/edit-icon.png" /></a>
                                                }
                                                else if (@item.ProductionType == "Subassembly")
                                                {
                                                    <a href="javascript:void(0)" onclick="Edit('@item.ProductionId', false)" class="watchlist-edit" title="Edit"><img src="~/Content/assets/images/edit-icon.png" /></a>
                                                }
                                            </td>*@
                                    </tr>
                                    startSerialNumber++;
                                }
                            </tbody>
                        }
                    </table>
                </div>

                <div class="row manage_customer_show">
                    <div class="font-14 manage_customer_show_I col-xl-6">
                        <span>Showing </span>
                        <select class="form-select font-16" name="manage_customer_show_content" id="manage_customer_show_no" aria-label="select example">
                            <option value="5" @(ViewBag.PageSize == 5 ? "selected" : "")>5</option>
                            <option value="10" @(ViewBag.PageSize == 10 ? "selected" : "")>10</option>
                            <option value="15" @(ViewBag.PageSize == 15 ? "selected" : "")>15</option>
                            <option value="20" @(ViewBag.PageSize == 20 ? "selected" : "")>20</option>
                        </select>
                    </div>

                    <div class="col-xl-6 manage_customer_show_II">
                        <nav class="float-xl-end">
                            <ul class="pagination font-14">
                                <li class="page-item">
                                    <a href="##" id="previousPage" class="page-link">Previous</a>
                                </li>
                                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                {
                                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                        <a href="@Url.Action("PreProductionReportMaster", "PreProductionReport", new { page = i })" class="page-link">@i</a>
                                    </li>
                                }
                                <li class="page-item">
                                    <a class="page-link" id="nextPage" href="##">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>


                </div>

            </div>

        </div>
    </div>
    <div id='myModal' class='modal'>
        <div class="modal-dialog">
            <div class="modal-content">
                <div id='details' class="myModalContent"></div>
            </div>
        </div>
    </div>

    <script src="~/Content/js/custom.js"></script>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="~/Content/js/bootstrap.bundle.min.js"></script>
    <script>
        $(window).on("load", function () {
            $(".report-inner-section").addClass("transection");
            $("#PreProduction").attr('checked', true);
        });
        $(document).ready(function () {


    $('#manage_customer_show_no').change(function() {
        var pageSize = parseInt($(this).val());
        window.location.href = "@Url.Action("PreProductionReportMaster", "PreProductionReport")?pageSize=" + pageSize;
    });

    $('#previousPage').click(function(e) {
        e.preventDefault();
        var currentPage = parseInt('@ViewBag.CurrentPage');
        if (currentPage > 1) {
            var previousPage = currentPage - 1;
            window.location.href = "@Url.Action("PreProductionReportMaster", "PreProductionReport")?page=" + previousPage + "&pageSize=" + parseInt('@ViewBag.PageSize');
        }
    });

    $('#nextPage').click(function(e) {
        e.preventDefault();
        var currentPage = parseInt('@ViewBag.CurrentPage');
        var totalPages = parseInt('@ViewBag.TotalPages');
        if (currentPage < totalPages) {
            var nextPage = currentPage + 1;
            window.location.href = "@Url.Action("PreProductionReportMaster", "PreProductionReport")?page=" + nextPage + "&pageSize=" + parseInt('@ViewBag.PageSize');
        }
    });

});

        document.querySelector('.tgl-btn').addEventListener('click', function () {
            var toggleState = this.getAttribute('data-tg-on');
            if (toggleState === "Summary") {
                getsummery();
                this.setAttribute('data-tg-on', 'Details');
            } else {
                getproductdetails();
                this.setAttribute('data-tg-on', 'Summary');
                this.setAttribute('data-tg-off', 'Details');
            }
        });
        function getsummery() {
            $(".table-responsive").hide();
            $.ajax({
                type: 'GET',
                url: '/PreProductionReport/PreProductionReportDetailsGrid',
                contentType: 'application/json',
                success: function (data) {
                    $(".table-responsive").html(data).show();
                }
            });
        }
        function getproductdetails() {
            window.location.href = "/PreProductionReport/PreProductionReportMaster";
        }

    </script>

    <script>
        function Search() {
            $.ajax({
                type: "GET",
                url: '/PreProductionReport/PreProductionReportSearch',
                data: { filter: $('#SearchID').val() },
                dataType: 'json',
                success: function (data) {
                    $("tbody").empty();
                    var count = 1;
                    $.each(data, function (i, item) {
                        $("tbody").append(`
                         <tr class="font-14">
                             <td>${count}</td>
                             <td>${item.SalesOrderId}</td>
                             <td>${item.BuyerName}</td>
                             <td>${item.ProductName}</td>
                             <td>${item.ProductItem}</td>
                             <td>${item.ProductTypeName}</td>
                             <td>${item.ProductionType}</td>
                         </tr>
                     `);
                        count++;
                    });
                },
                error: function (xhr, status, error) {
                    console.error("Error occurred:", status, error);
                }
            });
        }

    </script>
    @*<script>
            $(window).on("load", function () {
                $(".report-inner-section").addClass("transection");
                $("#order").attr('checked', true);
            });
        </script>*@


</body>
</html>

