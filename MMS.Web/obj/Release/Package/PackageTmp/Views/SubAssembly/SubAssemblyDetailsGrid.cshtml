@model MMS.Web.Models.SubAssemblyModel.SubAssemblyModel
@using MMS.Repository.Managers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alain Dashboard</title>
    <link rel="stylesheet" href="./css/bootstrap.min.css">
    <link rel="stylesheet" href="./css/custom.css">
    <link rel="stylesheet" href="./css/responsive.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="./css/variables.css">
    <style>
        input[type=text] {
            padding: 12px;
            font-size: 17px;
            border: 1px solid grey;
            width: 80%;
        }

        .buttonone {
            float: right;
            width: 20%;
            padding: 12px;
            background: #2196F3;
            color: white;
            font-size: 17px;
            border: 1px solid grey;
            border-left: none;
            cursor: pointer;
        }

        .page-item.active .page-link {
            z-index: 3;
            color: #fff;
            background-color: #4472C4;
            border-color: #0d6efd;
        }
    </style>

</head>
<body>
    <div class="main-page">


        <!-- page-contents here -->

        <div class="manage_customers">
            <div class="d-flex justify-content-between align-items-center manage_customers_head">
                <div class="manage_customers_main_head">
                    <h6 class="font-20">Manage Products</h6>
                </div>
                <div>
                    @*<button type="button" class="manage_customers_btn font-15">
                            <a href="AddEditSubCustomersPage-1.html">ADD Products</a>
                        </button>*@

                    <button class="btn btn-success" id="Addproducts" onclick="Addproducts()" title="Add Products">ADD SUBASSEMBLY</button>

                </div>
            </div>
            <div class="table-responsive manage_customers_table_responsive">
                <div class="customer_manage_search_containers" style="width:40%;">
                    <input type="text" placeholder="Search by Product Name" id="SeaarchID" name="search2">
                    <button class="buttonone" onclick="Search()" title="Filter" type="submit"><i class="fa fa-search"></i></button>

                </div>
                @*<div id="transaction_reports_search4_container" class="reports_search_container_btn">
                        <button type="button" class="btn btn-primary">
                            <a href="##" id="filter" onclick="Search()">FILTER</a>
                        </button>
                    </div>*@

                <div class="manage_customers_table_in_responsive">
                    <table class="table table-striped text-center">
                        <thead>
                            <tr class="font-16">
                                <th scope="col">
                                    <span>S.No</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>
                                <th scope="col">
                                    <span>Product Code</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>
                                <th scope="col">
                                    <span>Product Name</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>

                                <th scope="col">
                                    <span>Prodct Desc</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>
                                <th scope="col">
                                    <span>BOM</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>
                                <th scope="col">
                                    <span>Qty</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>
                            </tr>
                        </thead>
                        @if (Model.listProductionBOMModel != null && Model.listProductionBOMModel.Count > 0)
                        {
                            int count = 1;
                            <tbody>
                                @foreach (var item in Model.listProductionBOMModel)
                                {

                                    <tr class="font-14">
                                        <td>@count</td>
                                        <td>@item.BOMProductName</td>
                                        <td>@item.BOMProductCode</td>
                                        <td>@item.Description</td>
                                        <td>@item.Bomid</td>
                                        <td>@item.Qty</td>
                                    </tr>
                                    count++;
                                }
                            </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Content/js/custom.js"></script>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="~/Content/js/bootstrap.bundle.min.js"></script>

</body>
</html>
