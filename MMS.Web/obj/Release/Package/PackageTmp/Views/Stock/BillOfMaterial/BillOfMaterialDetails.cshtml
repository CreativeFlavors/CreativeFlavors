    <script>
        $(document).ready(function () {
            $(".read-only-dropdown").attr("disabled", "disabled");
            $("#sub").hide();
            $("#subreq").hide();
            $("#productSUB").hide();
            $("#add1").on("click", function () {
                $("#mat").hide();
                $("#uom").hide();
                $("#matreq").hide();
                $("#sub").show();
                $("#subreq").show();
                $("#productSUB").show();
                $("#product").hide();
            });
            $("#add").on("click", function () {
                $("#product").show();
                $("#productSUB").hide();
                $("#mat").show();
                $("#matreq").show();
                $("#uom").show();
                $("#sub").hide();
                $("#subreq").hide();
            });
        });
    </script>
    <script>

        $(document).ready(function () {
            $("#Productid").change(function () {
                var Productid = $('#Productid').val();
        $.ajax({
            url: '@Url.Action("FillUOMBasedonproductName", "BillOfMaterial")',
            type: "GET",
            dataType: "JSON",
            data: { productid: Productid },
            success: function (cities) {
                var $materialGroup = $("#Uomid");
                $materialGroup.empty();
                $.each(cities, function (i, city) {
                    $("#Uomid").append(
                        $('<option></option>').val(city.uomid).html(city.UomName)
                    );
                });
            }

        });
     });
 $("#Bomno").blur(function () {
 if ($('#Bomno').val() != null && $('#Bomno').val() != "") {
       var style = $('#Bomno').val();
       var letterNumber = /^[a-zA-Z-,]+(\s{0,1}[a-zA-Z-, ])*$/;
      if ((style.match(letterNumber))) {
             $('#Description').val(style);
         }
         else {
             $.ajax({
                 type: 'GET',
                 url: ' @Url.Action("CheckBomNo", "BillOfMaterial")',
                 data: { BomNo: style },
                 success: function (data) {
                     if (data.Message == "Already Existed") {
                         $('#Description').val("");
                         $('#Bomno').val("");
                         alert("Already Existed please try another BOM.");
                         $('#Bomno').val('');
                         return false;
                     }
                     else {
                         $('#Description').val(style);
                         $("#add-Material").show();
                     }

                 },
             });

         }
     }
     else {
         alert("Please enter the BOM.");
         return false;
     }
 });
});

