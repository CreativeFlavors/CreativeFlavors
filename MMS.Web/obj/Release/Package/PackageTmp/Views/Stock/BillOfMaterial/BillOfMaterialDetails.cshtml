                                <label class="font-14" for="ParentBomNo">Parent BOM No.</label>
                                @Html.DropDownListFor(m => m.ParentBomNo, MMS.Web.ExtensionMethod.HtmlHelper.GetBomNo(), " -- Please Select -- ", new { @class = "select-style text-field " })

                            </div>*@
