@model MMS.Web.Models.StageMaser.StageMasterModel
@{
    int id = Model.StageMasterId;
    Session["MaterialGroupMasterId"] = id;

}


<div class="right-form-section clearfix">
    <form role="form" class="form-inline">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12 no-padding stage_top_sec">
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                                <label class="form-label" for="text">Process Code</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">

                                @Html.HiddenFor(x => x.StageMasterId)

                                @*@Html.DropDownListFor(m => m.ProcessCode, MMS.Web.ExtensionMethod.HtmlHelper.ProcessName(), new { @class = "select-style text-field" })*@
                                @*<input list="browsers" name="browser">
                                    <datalist id="browsers">
                                        <option data-value="42" value="Internet Explorer">
                                        <option data-value="42" value="Firefox">
                                        <option data-value="42" value="Chrome">
                                        <option data-value="42" value="Opera">
                                        <option data-value="42" value="Safari">*@
                                <input list="StageMasterId" name="StageMasterId">
                                <datalist id="StageMasterId">
                                    @foreach (var browser in MMS.Web.ExtensionMethod.HtmlHelper.ProcessName())
                                    {

                                        <option data-value="@browser.Value" value="@browser.Text" />


                                    }
                                </datalist>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12 no-padding stage_top_sec">
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                                <label class="form-label" for="text">Order Type</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">

                                @Html.TextBoxFor(m => m.OrderType, new { @class = "form-control text-field" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12 no-padding stage_top_sec">
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                                <label class="form-label" for="text">Stage Code</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">

                                @Html.TextBoxFor(m => m.StageCode, new { @class = "form-control text-field", @readonly = true })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12 no-padding stage_top_sec">
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                                <label class="form-label" for="text">Stage Name</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">

                                @Html.TextBoxFor(m => m.StageName, new { @class = "form-control text-field" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12 no-padding stage_top_sec">
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                                <label class="form-label" for="text">Sub Stage</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">

                                @Html.TextBoxFor(m => m.SubStage, new { @class = "form-control text-field" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12 no-padding stage_top_sec">
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                                <label class="form-label" for="text">Inspection</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                @if (Model.IsInspection == true)
                                {
                                    <input type="checkbox" class="width-20" id="IsInspection" checked="checked" />
                                    <label for="IsInspection">Components</label>
                                }
                                else
                                {
                                    <input type="checkbox" class="width-20" id="IsInspection" />
                                    <label for="IsInspection">Inspection</label>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div style="margin: 15px 0px;" class="col-md-12 col-sm-12 col-lg-12 col-xs-12 text-center">
                    <input type="button" onclick="Cancel()" class="btn btn-default btn-style width-78" title="Back" value="Back">
                    @if (Model != null && Model.StageMasterId != 0)
                    {

                        <input type="button" onclick="Update()" class="btn btn-default btn-style width-78" id="StageMasterId" title="Update" value="Update">
                    }
                    else
                    {
                        <input type="button" onclick="Save()" class="btn btn-default btn-style width-78" title="Save" value="Save">
                    }
                    <button class="btn btn-default btn-style width-78" type="submit">Clear</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    $(document).ajaxStart(function () {
        $(".loader-overlay").css("display", "block");
    });

    $(document).ajaxComplete(function () {
        $(".loader-overlay").css("display", "none");
    });
    $(window).load(function () {
        $('.loader-overlay').fadeOut('fast');
    });

</script>

