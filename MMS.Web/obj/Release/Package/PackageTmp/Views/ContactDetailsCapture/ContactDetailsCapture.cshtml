            }
        }

        function PhoneValidation(Phone) {

            var PhoneReg = new RegExp(/\(?([0-9]{3})\)?([ .-]?)([0-9]{3})\2([0-9]{4})/);
            return PhoneReg.test(Phone);


        }
        if ($('#EmailId').val().trim() == "") {
            alert("Please Enter Email Address")
            $('#EmailId').css('border-color', 'red');
            $('#EmailId').focus();
            return false;
        }
        else {
            var a = ValidateEmail($('#EmailId').val());

