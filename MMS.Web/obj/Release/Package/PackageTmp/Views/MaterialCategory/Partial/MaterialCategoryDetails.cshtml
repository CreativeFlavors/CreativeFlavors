@model MMS.Web.Models.MaterailCategory.MaterialCategoryModel

@{
    int id = Model.MaterialCategoryMasterId;
    Session["MaterialCategoryMasterId"] = id;
}
<div class="right-form-section clearfix">
    <form role="form" class="form-inline">
        <div class="container-fluid">
            <div style="margin-top: 20px;" class="row">
                <div class="col-md-3 col-sm-3 col-lg-3 col-xs-12 no-padding"></div>
                <div class="col-md-6 col-sm-6 col-lg-6 col-xs-12 no-padding">
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12">
                                <label class="form-label" for="text">Category Code</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">

                                @Html.HiddenFor(x => x.MaterialCategoryMasterId)
                                @Html.TextBoxFor(m => m.CategoryCode, new { @class = "form-control text-field",@readonly=true })
                            </div>
                        </div>
                    </div>
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12">
                                <label class="form-label" for="text">Category Name</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">

                                @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control text-field" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-3 col-lg-3 col-xs-12 no-padding"></div>
            </div>
        </div>

        <div class="form-footer">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12 text-center">
                    <input type="button" onclick="Cancel()" class="btn btn-default btn-style" title="Back" value="Back">
                    @if (Model != null && Model.MaterialCategoryMasterId != 0)
                    {

                        <input type="button" onclick="Update()" class="btn btn-default btn-style" id="MaterialCategoryMasterId" title="Update" value="Update">
                    }
                    else
                    {
                        <input type="button" onclick="Save()" class="btn btn-default btn-style" title="Save" value="Save">
                    }
                </div>
            </div>
        </div>

    </form>
</div>

<script>
    $(document).ajaxStart(function () {
        $(".loader-overlay").css("display", "block");
    });

    $(document).ajaxComplete(function () {
        $(".loader-overlay").css("display", "none");
    });
    $(window).load(function () {
        $('.loader-overlay').fadeOut('fast');
    });

</script>

