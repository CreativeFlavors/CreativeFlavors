@model MMS.Web.Models.NormsModel.NormsModel
@{

}
<script>
    $(document).ajaxStart(function () {
        $(".loader-overlay").css("display", "block");
    });

    $(document).ajaxComplete(function () {
        $(".loader-overlay").css("display", "none");
    });
    $(window).load(function () {
        $('.loader-overlay').fadeOut('fast');
    });
    function Cancel() {
        
        location.reload();
    }
</script>
<style>
    .norms-txt {
        width: 40% !important;
        margin-left: 5px;
    }

    .content-wrapper {
        overflow-x: hidden;
    }
</style>
<div class="right-form-section clearfix">
    <form role="form" class="form-inline">
        <div class="container-fluid">
            <div class="field-section">
                <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12">
                    <p class="section-title">Norms Master</p>
                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-lg-6 col-xs-12">
                            <div class="field-section">
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-5 col-lg-3 col-xs-12">
                                        <label class="form-label" for="text">Buyer Name</label>
                                    </div>
                                    <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                        @Html.HiddenFor(x => x.Normsid)
                                        @Html.DropDownListFor(m => m.BuyerNameid, MMS.Web.ExtensionMethod.HtmlHelper.BuyerName(), new { @class = "select-style text-field " })
                                    </div>
                                </div>
                            </div>
                            <div class="field-section">
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-5 col-lg-3 col-xs-12">
                                        <label class="form-label" for="text">Material Group</label>
                                    </div>
                                    <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                        @Html.DropDownListFor(m => m.GroupId, MMS.Web.ExtensionMethod.HtmlHelper.MaterialGroupName(), new { @class = "select-style text-field " })
                                    </div>
                                </div>
                            </div>
                            <div class="field-section">
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-5 col-lg-3 col-xs-12">
                                        <label class="form-label" for="text">Our Norms/Sample Norms</label>
                                    </div>
                                    <div class="col-md-7 col-sm-7 col-lg-9 col-xs-12" style="display:inline-block;">
                                        @Html.RadioButtonFor(x => x.BuyerOption, "1") <span>Buyer Norms</span>
                                        @Html.RadioButtonFor(x => x.BuyerOption, "2") <span>Sample Norms</span>
                                        @Html.RadioButtonFor(x => x.BuyerOption, "3") <span>Our Norms</span>

                                    </div>
                                </div>
                            </div>
                            <div class="field-section">
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-5 col-lg-3 col-xs-12">
                                        <label class="form-label" for="text">Our Norms</label>
                                    </div>
                                    <div class="col-md-7 col-sm-7 col-lg-9 col-xs-12" style="display:inline-block;">
                                        @Html.DropDownListFor(m => m.OurNorms, new SelectList(
                                                                    new List<Object>
                                                                        {
                                                                        new { value = 0 , text = "Please Select"  },
                                                                        new { value = 1 , text = "Increase" },
                                                                        new { value = 2 , text = "Decrease" },
                                                                        new { value = 3 , text = "Same" }
                                                                        },
                                                                        "value",
                                                                        "text",
                                                                        0), new { @class = "select-style text-field ", style = "  width:120px;" })
                                        <div>@Html.TextBoxFor(m => m.NormsPercentage, new { @class = "form-control text-field norms-txt" })</div>

                                        <div class="percent">%</div>
                                    </div>
                                </div>
                            </div>

                            <div class="field-section">
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-5 col-lg-3 col-xs-12">
                                        <label class="form-label" for="text">Purchase Norms</label>
                                    </div>
                                    <div class="col-md-7 col-sm-7 col-lg-9 col-xs-12" style="display:inline-block;">
                                        @Html.DropDownListFor(m => m.PurchaseNormsid, new SelectList(
                                                                    new List<Object>
                                                                        {
                                                                        new { value = 0 , text = "Please Select"  },
                                                                        new { value = 1 , text = "Increase" },
                                                                        new { value = 2 , text = "Decrease" },
                                                                        new { value = 3 , text = "Same" }
                                                                        },
                                                                        "value",
                                                                        "text",
                                                                        0), new { @class = "select-style text-field ", style = "  width: 120px;" })


                                        @Html.TextBoxFor(m => m.NormsPercentage1, new { @class = "form-control text-field norms-txt" })
                                        <div class="percent">%</div>
                                    </div>

                                </div>
                            </div>
                            <div class="field-section">
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-5 col-lg-3 col-xs-12">
                                        <label class="form-label" for="text">Issue Norms</label>
                                    </div>
                                    <div class="col-md-7 col-sm-7 col-lg-9 col-xs-12" style="display:inline-block;">
                                        @Html.DropDownListFor(m => m.IssueNormsid, new SelectList(
                                                                    new List<Object>
                                                                        {
                                                                        new { value = 0 , text = "Please Select"  },
                                                                        new { value = 1 , text = "Increase" },
                                                                        new { value = 2 , text = "Decrease" },
                                                                        new { value = 3 , text = "Same" }
                                                                        },
                                                                        "value",
                                                                        "text",
                                                                        0), new { @class = "select-style text-field ", style = "  width: 120px;" })
                                        <div>@Html.TextBoxFor(m => m.NormsPercentage2, new { @class = "form-control text-field norms-txt" })</div>

                                        <div class="percent">%</div>
                                    </div>

                                </div>
                            </div>
                            <div class="field-section">
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-5 col-lg-3 col-xs-12">
                                        <label class="form-label" for="text">Costing Norms</label>
                                    </div>
                                    <div class="col-md-7 col-sm-7 col-lg-9 col-xs-12" style="display:inline-block;">
                                        @Html.DropDownListFor(m => m.CostingNorms, new SelectList(
                                                                    new List<Object>
                                                                        {
                                                                        new { value = 0 , text = "Please Select"  },
                                                                        new { value = 1 , text = "Increase" },
                                                                        new { value = 2 , text = "Decrease" },
                                                                        new { value = 3 , text = "Same" }
                                                                        },
                                                                        "value",
                                                                        "text",
                                                                        0), new { @class = "select-style text-field ", style = "  width: 120px;" })
                                        <div>@Html.TextBoxFor(m => m.NormsPercentage3, new { @class = "form-control text-field norms-txt" })</div>

                                        <div class="percent">%</div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="form-footer">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12 text-center">

                    <input type="button" onclick="Cancel()" class="btn btn-default btn-style" title="Back" value="Back">
                    @if (Model != null && Model.Normsid != 0)
                    {
                        <input type="button" onclick="Save()" class="btn btn-default btn-style" id="OrderTypeID" title="Update" value="Update">
                    }
                    else
                    {
                        <input type="button" onclick="Save()" class="btn btn-default btn-style" title="Save" value="Save">
                    }
                    <button class="btn btn-default btn-style" type="button">Clear</button>
                </div>
            </div>
        </div>
    </form>
</div>


