    SupplierMaster supplierMaster = new SupplierMaster();
    if (Model.bomMaterialGridList != null && Model.bomMaterialGridList.Count > 0)
    {
        Model.bomMaterialGridList = Model.bomMaterialGridList.Where(x => x.IsDeleted == false).ToList();
