    });

    function ToDateFormat(value) {
        var pattern = /Date\(([^)]+)\)/;
        var results = pattern.exec(value);
        var dt = new Date(parseFloat(results[1]));
        var month = parseInt(dt.getMonth()) + parseInt(1);
        return (dt.getDate() + "/" + month + "/" + dt.getFullYear());
    }
