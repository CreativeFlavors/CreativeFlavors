@model MMS.Web.Models.TaxTypeMasterModel.TaxTypeMasterModel
@using MMS.Repository.Managers
@using MMS.Core.Entities
@{

}

<div class="right-form-section clearfix"   >
    <form role="form" class="form-inline" >
        <div class="container-fluid">
            <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12">
                <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12 no-padding stage_top_sec">
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                                <label class="form-label" for="text">Tax Name</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12" >
                                @Html.HiddenFor(x => x.TaxMasterID)
                                @Html.TextBoxFor(m => m.TaxName, new { id = "TaxName", @class = "form-control text-field", })

                                @*@Html.TextBoxFor(m => m.TaxName,  new { @class = "form-control text-field",ng_model="TaxName" })*@
                            </div>
                        </div>
                    </div>
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                                <label class="form-label" for="text">Tax Value</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                <div class="col-lg-12 col-lg-12 col-xs-12 col-sm-12 no-padding">
                                    <div class="col-md-6 col-lg-6 col-xs-12 col-sm-6 pad_left">
                                        @Html.TextBoxFor(m => m.TaxValue, new { @class = "form-control text-field",id= "TaxValue",name= "TaxValue",  @onkeypress = "return isNumberKey(event)" })
                                    </div>
                                    <div class="col-md-6 col-lg-6 col-xs-12 col-sm-6 pad_right">

                                        @Html.DropDownListFor(m => m.TaxValueMode, new SelectList(new List<Object>{new { value = 1 , text = "%"  },
                                                                                                           new { value = 2 , text = "₹" }}, "value", "text"), "Please Select",
                                                                                                           new { @class = "select-style text-field" })

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                  


                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                                <label class="form-label" for="text">Tax On</label>
                            </div>
                          @if (Model.TaxTypeMasterList != null && Model.TaxTypeMasterList.Count > 0 )
                          {
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                @Html.DropDownListFor(m => m.TaxOn, MMS.Web.ExtensionMethod.HtmlHelper.GetTaxON(), new { @class = "select-style text-field" })
                               
                            </div>

                          }
                          else
                          {
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                @Html.TextBoxFor(m => m.TaxOn, new { id = "TaxOn", @class = "form-control text-field" })
                            </div>

                          }
                        </div>
                    </div>
                    @*<div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                                <label class="form-label" for="text">Cost Of the Product</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                               
                            </div>
                        </div>
                    </div>*@
                </div>
                <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12 no-padding">
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                                <label class="form-label" for="text">Tax Ref</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                @Html.DropDownListFor(m => m.TaxRef, new SelectList(new List<Object>{
                                                                                                   new { value = 1 , text = "Local Tax" },
                                                                                                   new { value = 2 , text = "Import Tax" }}, "value", "text"),
                                                                                                   "Please Select",
                                                                                                   new { @class = "select-style text-field" })
                            </div>
                        </div>
                    </div>
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                                <label class="form-label" for="text">Form</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                @Html.DropDownListFor(m => m.Form, new SelectList(new List<Object>{new { value = 1 , text = "Without 'C' Form" },
                                                                                                   new { value = 2 , text = "With 'C' Form" },
                                                                                                   new { value = 3 , text = "Not Applicable" }}, "value", "text"),
                                                                                                   "Please Select",
                                                                                                   new { @class = "select-style text-field" })

                            </div>
                        </div>
                    </div>
                   
                    @*<div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                                <label class="form-label" for="text"> @Html.TextBoxFor(m => m.CostOfTheProduct, new { @class = "form-control text-field" }) </label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">

                            </div>
                        </div>
                    </div>*@
                </div>
            </div>





            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
                <div style="margin: 15px 0px;" class="col-md-12 col-sm-12 col-lg-12 col-xs-12 text-center">
                    <input type="button" onclick="Cancel()" class="btn btn-default btn-style width-78" title="Back" value="Back">
                    @if (Model != null && Model.TaxMasterID != 0)
                    {

                        <input type="button" onclick="Update()" class="btn btn-default btn-style width-78" id="TaxMasterID" title="Update" value="Update">
                    }
                    else
                    {
                        <input type="button" onclick="Save()" class="btn btn-default btn-style width-78" title="Save" value="Save">
                    }
                    <button class="btn btn-default btn-style width-78" type="submit">Clear</button>
                </div>
            </div>
        </div>
    </form>
</div>
<script>    
    function isNumberKey(evt) {
       
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }
    
function myFunction() {
    var TaxName = $("#TaxName").val();
    $("#TaxOn").val((TaxName));
}
</script>
