            success: function (data) {
                if (data.SeasonMasterId != "" || data.SeasonMasterId != 0) {
                    alert('Updated Successfully.');
                    location.href = "/SeasonMaster/SeasonMaster";
                    return false;
                }
                else {
                    alert('Updation failed.');
                    location.href = "/SeasonMaster/SeasonMaster";
                    return false;
                }

            },
            error: function (ex) {
                alert('Already Exist in the database.');
            }
        });
    }
</script>
