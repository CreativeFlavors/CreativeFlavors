@model MMS.Web.Models.Component.ComponentModel
@{
    int id = Model.ComponentMasterId;
    Session["ComponentMasterId"] = id;
}



<div class="right-form-section clearfix">
    <form role="form" class="form-inline">
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12">
                    <h3>Component Master</h3>
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                                <label class="form-label" for="text">Component Name</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                @Html.HiddenFor(x => x.ComponentMasterId)
                                @Html.TextBoxFor(m => m.ComponentName, new { @class = "form-control text-field" })
                            </div>
                        </div>
                    </div>
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                                <label class="form-label" for="text">Used In</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                @Html.TextBoxFor(m => m.UsedIn, new { @class = "form-control text-field" })
                            </div>
                        </div>
                    </div>
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                               
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                @if (Model != null && Model.Image != "" && Model.Image != null)
                                {
                                    string scr = "../ColorUpload/CompenentImages/" + Model.Image;
                                    <div>
                                        <input type="file" id="UploadImg">
                                        <img src="@scr" alt="Image" style=" float: right;height: 34px;" />
                                       
                                    </div>
                                }
                                else
                                {
                                    <div>
                                        <input type="file" id="UploadImg">
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>                                               

            </div>


            <div class="row">
                <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12 text-center" style="margin: 15px 0px;">                    
                    <input type="button" onclick="Cancel()" class="btn btn-default btn-style width-78" style="cursor: pointer;" title="Back" value="Back">
                    @if (Model != null && Model.ComponentMasterId != 0)
                    {

                    <input type="button" onclick="Update()" class="btn btn-default btn-style width-78" style="cursor: pointer;" id="ComponentMasterId" title="Update" value="Update">
                    }
                    else
                    {
                    <input type="button" onclick="Save()" class="btn btn-default btn-style width-78" style="cursor: pointer;" title="Save" value="Save">
                    }
                    <input type="button" onclick="Clear()" class="btn btn-default btn-style width-78" style="cursor: pointer;" title="Clear" value="Clear">
                </div>
            </div>
        </div>
    </form>
</div>

