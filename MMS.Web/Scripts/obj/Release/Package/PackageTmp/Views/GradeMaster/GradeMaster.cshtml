    function Save() {
        if ($('#CodeNo').val() == "") {
            alert("Please Enter CodeNo.")
            $('#CodeNo').css('border-color', 'red');
            $('#CodeNo').focus();
            return false;
        }
        else {
            $('#CodeNo').css('border-color', '');
        }
        if ($('#Category').val() == "") {
            alert("Please Enter Category.")
            $('#Category').css('border-color', 'red');
            $('#Category').focus();
            return false;
        }
        else {
            $('#Category').css('border-color', '');
        }
        if ($('#Designation').val() == "") {
