            $('#Efficiency').css('border-color', 'red');
            $('#Efficiency').focus();
            return false;
        }
        else {
            $('#Efficiency').css('border-color', '');
        }
        
        $.ajax({
            type: 'POST',
            url: '/GradeMaster/GradeMaster',
            data: {
                CodeNo: $('#CodeNo').val(),
                Category: $('#Category').val(),
                Designation: $('#Designation').val(),
                Grade: $('#Grade').val(),
                Efficiency: $('#Efficiency').val(),                 
            },
                
            success: function (data) {             
                if (data.GradeMasterID != "" || data.GradeMasterID != 0) {
                    alert('Saved Successfully.');
                    location.href = "/GradeMaster/GradeMaster";
                    return false;
                }
                else {
                    alert('Save process Failed.');
                    location.href = "/GradeMaster/GradeMaster";
                    return false;
                }

            },
            error: function (ex) {
                alert('Already Exist in the database.');
            }
        });
    }
