@model MMS.Web.Models.StoreMasterModel.StoreMasterModel
@{
    int id = Model.StoreMasterId;
    Session["StoreMasterId"] = id;
}


<div class="right-form-section clearfix">
    <form role="form" class="form-inline">
        <div class="container-fluid">
            <p class="header_sec">Store Master</p>
            <div style="margin-top: 20px;" class="row">
                <div class="col-md-3 col-sm-3 col-lg-3 col-xs-12 no-padding"> </div>
                <div class="col-md-6 col-sm-6 col-lg-6 col-xs-12 no-padding">
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12">
                                <label class="form-label" for="text">Store Code</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                              
                                @Html.HiddenFor(m => m.StoreMasterId)
                                @Html.TextBoxFor(m => m.StoreCode, new { @class = "form-control text-field",@readonly=true })
                            </div>
                        </div>
                    </div>
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12">
                                <label class="form-label" for="text">Store Name</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                             
                                @Html.TextBoxFor(m => m.StoreName, new { @class = "form-control text-field" })
                            </div>
                        </div>
                    </div>
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12">
                                <label class="form-label" for="text">Location</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                               
                                @Html.TextBoxFor(m => m.Location, new { @class = "form-control text-field" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-3 col-lg-3 col-xs-12 no-padding"> </div>
            </div>

            <div class="row">
                <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12 text-center" style="margin: 15px 0px;">
                  

                    <input type="button" onclick="Clear()" class="btn btn-default btn-style width-78" style="cursor: pointer;" title="Clear" value="Clear">
                    <input type="button" onclick="Cancel()" class="btn btn-default btn-style width-78" style="cursor: pointer;" title="Back" value="Back">
                    @if (Model != null && Model.StoreMasterId != 0)
                {

                <input type="button" onclick="Update()" class="btn btn-default btn-style width-78" style="cursor: pointer;" id="StoreMasterId" title="Update" value="Update">
                }
                else
                {
                <input type="button" onclick="Save()" class="btn btn-default btn-style width-78" style="cursor: pointer;" title="Save" value="Save">
                }

                </div>
            </div>
        </div>
    </form>
</div>



