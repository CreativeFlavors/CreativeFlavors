@model MMS.Web.Models.ProductTypeModel.ProductTypeModels
@{
                            //int id = Model.ColorMasterId;
                            //Session["ColorID"] = id;
}


<div class="right-form-section clearfix">
    <form role="form" class="form-inline">
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12">
                    <h3>Product Type</h3>
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                                <label class="form-label" for="text">Product Type Code</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                               @Html.HiddenFor(x => x.ProductTypeID)
                               @Html.TextBoxFor(m => m.ProductTypeCode, new { @class = "form-control text-field", @readonly = true })
                            </div>
                        </div>
                    </div>
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                                <label class="form-label" for="text">Product Type Name</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                @Html.TextBoxFor(m => m.ProductTypeName, new { @class = "form-control text-field" })
                            </div>
                        </div>
                    </div>                    
                </div>                
            </div>


            <div class="row">
                <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12 text-center" style="margin: 15px 0px;">


                    <input type="button" onclick="Clear()" class="btn btn-default btn-style width-78" style="cursor: pointer;" title="Clear" value="Clear">
                    <input type="button" onclick="Cancel()" class="btn btn-default btn-style width-78" style="cursor: pointer;" title="Back" value="Back">
                    @if (Model != null && Model.ProductTypeID != 0)
                    {

                        <input type="button" onclick="UpdateProductType()" class="btn btn-default btn-style width-78" style="cursor: pointer;" id="masterID" title="Update" value="Update">
                    }
                    else
                    {
                        <input type="button" onclick="SaveProductType()" class="btn btn-default btn-style width-78" style="cursor: pointer;" title="Save" value="Save">
                    }

                </div>
            </div>
        </div>
    </form>
</div>


