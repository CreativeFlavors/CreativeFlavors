    function Save() {
        if ($('#OrderIndicationNo').val() == "") {
            alert("Please Enter Tax Name.")
            $('#OrderIndicationNo').css('border-color', 'red');
            $('#OrderIndicationNo').focus();
            return false;
        }
        else {
            $('#OrderIndicationNo').css('border-color', '');
        }
        if ($('#BuyerMasterId').val() == "") {
            alert("Please Select Buyer Name.")
            $('#BuyerMasterId').css('border-color', 'red');
