    function Add() {
        $('.veh-tablecont').hide();
        $.ajax({
            type: "POST",
            url: ' @Url.Action("ProductBuyerStyleDetails", "Product_BuyerStyle")',
            data: { ProductOrBuyerStyleId: 0 },
