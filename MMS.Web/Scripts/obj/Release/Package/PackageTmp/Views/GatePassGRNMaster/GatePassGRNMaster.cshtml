        }
        
        var IsPrintWithout = null;
        if ($('#IsPrintWithoutCompanyAddress').is(":checked")) {
            IsPrintWithout = true;
        }
        else {
            IsPrintWithout = false;
        }

        $.ajax({
            type: 'POST',
            url: '/GatePassGRNMaster/GatePassGRNMaster',
            data: {               
                ReceiptNo: $('#ReceiptNo').val(),               
                Date: $('#Date').val(),
                IsSupplier: $('#IsSupplier').val(),
                PartyName: $('#PartyName').val(),
                RefGatePassNo: $('#RefGatePassNo').val(),
                MaterialName: $('#MaterialName option:selected').val(),
                Quantity: $('#Quantity').val(),
                UOM: $('#UOM').val(),                
                Rate: $('#Rate').val(),
                Amount: $('#Amount').val(),                
                Instructions: $('#Instructions').val(),
                IsPrintWithRateValue:IsPrint,
                IsPrintWithoutCompanyAddress: IsPrintWithout
            },
                
            success: function (data) {             
                if (data.GatePassInvwardId != "" || data.GatePassInvwardId != 0) {
                    alert('Saved Successfully.');
                    location.href = "/GatePassGRNMaster/GatePassGRNMaster";
                    return false;
                }
                else {
                    alert('Save process Failed.');
                    location.href = "/GatePassGRNMaster/GatePassGRNMaster";
                    return false;
                }

            },
            error: function (ex) {
                alert('Already Exist in the database.');
            }
        });
    }
