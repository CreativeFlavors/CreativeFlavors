@model MMS.Web.Models.SizeRangeDetailsModel.SizeRangeDetailsModel
@{
    int id = Model.SizeRangeDetailsId;
    Session["SizeRangeDetailsId"] = id;
}

<div class="right-form-section clearfix">
    <form role="form" class="form-inline">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-lg-6 col-xs-12 no-padding">
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                                <label class="form-label" for="text">SizeNo</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                @Html.TextBoxFor(m => m.SizeNo, new { @class = "form-control text-field" })
                            </div>
                        </div>
                    </div>
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                                <label class="form-label" for="text">Size Master name</label>
                            </div>
                            @Html.HiddenFor(m => m.SizeRangeDetailsId)
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                @Html.TextBoxFor(m => m.SizenRangeName, new { @class = "form-control text-field" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-footer">
            <div class="row">
                <div style="margin: 15px 0px;" class="col-md-12 col-sm-12 col-lg-12 col-xs-12 text-center">
                    <input type="button" onclick="Cancel()" class="btn btn-default btn-style width-78" title="Back" value="Back">
                    @if (Model != null && Model.SizeRangeDetailsId != 0)
                    {

                        <input type="button" onclick="Update()" class="btn btn-default btn-style width-78" id="SizeRangeMasterId" title="Update" value="Update">
                    }
                    else
                    {
                        <input type="button" onclick="Save()" class="btn btn-default btn-style width-78" title="Save" value="Save">
                    }
                    <button class="btn btn-default btn-style width-78" type="submit">Clear</button>
                </div>
            </div>
        </div>
    </form>
</div>
