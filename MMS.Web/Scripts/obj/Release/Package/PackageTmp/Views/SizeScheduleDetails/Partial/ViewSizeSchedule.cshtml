@model MMS.Web.Models.SizeScheduleDetailModel.SizeScheduleDetailsModel
@{
    int id = Model.SizeScheduleDetailsId;
    Session["SizeScheduleDetailsId"] = id;
}

<div class="right-form-section clearfix">
    <form role="form" class="form-inline">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-lg-6 col-xs-12 no-padding">
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                                <label class="form-label" for="text">Size</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                @Html.HiddenFor(x => x.SizeScheduleDetailsId)
                                @Html.TextBoxFor(m => m.Size, new { @class = "form-control text-field" })
                            </div>
                        </div>
                    </div>
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                                <label class="form-label" for="text">SizeNo</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                @Html.TextBoxFor(m => m.SizeNo, new { @class = "form-control text-field" })
                            </div>
                        </div>
                    </div>
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                                <label class="form-label" for="text">OriginName</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">                                
                                @Html.DropDownListFor(m => m.SizeScheduleMasterId, MMS.Web.ExtensionMethod.HtmlHelper.GetSizeScheduleMasterRangeName(), new { @class = "select-style text-field" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-footer">
            <div class="row">
                <div style="margin: 15px 0px;" class="col-md-12 col-sm-12 col-lg-12 col-xs-12 text-center">
                    <input type="button" onclick="Cancel()" class="btn btn-default btn-style width-78" title="Back" value="Back">
                    @if (Model != null && Model.SizeScheduleDetailsId != 0)
                    {

                        <input type="button" onclick="Update()" class="btn btn-default btn-style width-78" id="SizeScheduleDetailsId" title="Update" value="Update">
                    }
                    else
                    {
                        <input type="button" onclick="Save()" class="btn btn-default btn-style width-78" title="Save" value="Save">
                    }
                    <button class="btn btn-default btn-style width-78" type="submit">Clear</button>
                </div>
            </div>
        </div>
    </form>
</div>


<script>
    $(".allownumericwithdecimal").on("keypress keyup blur", function (event) {
        //this.value = this.value.replace(/[^0-9\.]/g,'');
        $(this).val($(this).val().replace(/[^0-9\.]/g, ''));
        if ((event.which != 46 || $(this).val().indexOf('.') != -1) && (event.which < 48 || event.which > 57)) {
            event.preventDefault();
        }
    });
    </script>

<script>
    var specialKeys = new Array();
    specialKeys.push(8); //Backspace
    function Numeric() {

        $("#SizeNo").bind("keypress", function (e) {
            var keyCode = e.which ? e.which : e.keyCode
            var ret = ((keyCode >= 48 && keyCode <= 57) || specialKeys.indexOf(keyCode) != -1);

            $(".error").css("Average", ret ? "none" : "inline");
            return ret;
        });
        $("#SizeNo").bind("paste", function (e) {
            return false;
        });
        $("#SizeNo").bind("drop", function (e) {
            return false;
        });
    }

</script>

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<link href="~/Scripts/EasyAutocomplete-1.3.5/comboStyles.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script src="~/Scripts/EasyAutocomplete-1.3.5/ComboBox.js"></script>
<script>      
    $("#SizeScheduleMasterId").combobox();
</script>

