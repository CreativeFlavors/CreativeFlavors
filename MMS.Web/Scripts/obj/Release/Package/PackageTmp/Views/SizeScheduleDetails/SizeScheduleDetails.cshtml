@{
    ViewBag.Title = "SizeScheduleDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/FormStyle.css" rel="stylesheet" />

}
<style>

</style>
<script>
    //$(".activity_repoty_table").tablesorter();
    // A $( document ).ready() block.
    $(document).ready(function () {
        $("#EditColorPartial").hide();

    });
    function Save() {
        if ($('#SizeNo').val() == "") {
            alert("Please Enter Size No.")
            $('#SizeNo').css('border-color', 'red');
            $('#SizeNo').focus();
            return false;
        }
        else {
            $('#SizeNo').css('border-color', '');
        }
        if ($('#Size').val() == "") {
            alert("Please Enter Size.")
            $('#Size').css('border-color', 'red');
            $('#Size').focus();
            return false;
        }
        else {
            $('#Size').css('border-color', '');
        }
        if ($('#SizeScheduleMasterId').val() == "") {
            alert("Please Enter Size Range Master.")
            $('#SizeScheduleMasterId').css('border-color', 'red');
            $('#SizeScheduleMasterId').focus();
            return false;
        }
        else {
            $('#SizeScheduleMasterId').css('border-color', '');
        }
        $.ajax({
            type: 'POST',
            url: '/SizeScheduleDetails/SizeScheduleDetails',
            data: {
                SizeNo: $('#SizeNo').val(),
                Size: $('#Size').val(),
                SizeScheduleMasterId: $('#SizeScheduleMasterId').val()
            },
            success: function (data) {
                if (data.SizeScheduleDetailsId != "" || data.SizeScheduleDetailsId != 0) {
                    alert('Saved Successfully.');
                    location.href = "/SizeScheduleDetails/SizeScheduleDetails";
                    return false;
                }
                else {
                    alert('Save process Failed.');
                    location.href = "/SizeScheduleDetails/SizeScheduleDetails";
                    return false;
                }

            },
            error: function (ex) {
                alert('Already Exist in the database.');
            }
        });
    }
    function Update(arg) {
        if ($('#SizeNo').val() == "") {
            alert("Please Enter Size No.")
            $('#SizeNo').css('border-color', 'red');
            $('#SizeNo').focus();
            return false;
        }
        else {
            $('#SizeNo').css('border-color', '');
        }
        if ($('#Size').val() == "") {
            alert("Please Enter Size.")
            $('#Size').css('border-color', 'red');
            $('#Size').focus();
            return false;
        }
        else {
            $('#Size').css('border-color', '');
        }
        if ($('#SizeScheduleMasterId').val() == "") {
            alert("Please Enter Size Range Master.")
            $('#SizeScheduleMasterId').css('border-color', 'red');
            $('#SizeScheduleMasterId').focus();
            return false;
        }
        else {
            $('#SizeScheduleMasterId').css('border-color', '');
        }
        $.ajax({
            type: 'POST',
            url: '/SizeScheduleDetails/Update',
            data: {
                SizeNo: $('#SizeNo').val(),
                Size: $('#Size').val(),
                SizeScheduleMasterId: $('#SizeScheduleMasterId').val(),
                SizeScheduleDetailsId: $('#SizeScheduleDetailsId').val()
            },
            success: function (data) {
                if (data.SizeScheduleDetailsId != "" || data.SizeScheduleDetailsId != 0) {
                    alert('Updated Successfully.');
                    location.href = "/SizeScheduleDetails/SizeScheduleDetails";
                    return false;
                }
                else {
                    alert('Updation failed.');
                    location.href = "/SizeScheduleDetails/SizeScheduleDetails";
                    return false;
                }

            },
            error: function (ex) {
                alert('Already Exist in the database.');
            }
        });
    }
</script>
<h2 class="content-title">Size Schedule Details</h2>
<div style="width: 100%; float: left;">

    <div id="tabVehicleWatchList">
        @Html.Action("SizeScheduleDetailsGrid", "SizeScheduleDetails")
    </div>
</div>




