@model MMS.Web.Models.GroupSystemCalculationModel.GroupSystemCalculationModel
@{
   
}

<div class="right-form-section clearfix">
    <form role="form" class="form-inline">
        <div class="container-fluid">
            <div class="field-section">
                <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12">
                    <p class="section-title">Group System Calculation</p>
                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-lg-6 col-xs-12">
                            <div class="field-section">
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12">
                                        <label class="form-label" for="text">Production Percent</label>
                                    </div>
                                    <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                      
                                        @Html.HiddenFor(x => x.GroupSystemCalculationId)
                                        @Html.TextBoxFor(m => m.ProductionPercent, new { @class = "form-control text-field" })
                                    </div>
                                </div>
                            </div>
                            <div class="field-section">
                                <div class="form-group">
                                    <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12">
                                        <label class="form-label" for="text">Amount</label>
                                    </div>
                                    <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                      
                                        @Html.TextBoxFor(m => m.Amount, new { onclick = "Numeric()", @class = "form-control text-field" })
                                    </div>
                                </div>
                            </div>
                        </div>                        
                    </div>
                </div>
            </div>

        </div>


        <div class="form-footer">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12 text-center">
                   
                    <input type="button" onclick="Cancel()" class="btn btn-default btn-style" title="Back" value="Back">
                    @if (Model != null && Model.GroupSystemCalculationId != 0)
                    {

                        <input type="button" onclick="Update()" class="btn btn-default btn-style" id="GroupSystemCalculationId" title="Update" value="Update">
                    }
                    else
                    {
                        <input type="button" onclick="Save()" class="btn btn-default btn-style" title="Save" value="Save">
                    }
                    <button class="btn btn-default btn-style" type="button">Clear</button>
                </div>
            </div>
        </div>
    </form>
</div>


<script>
    var specialKeys = new Array();
    specialKeys.push(8); //Backspace
    function Numeric() {

        $("#Amount").bind("keypress", function (e) {
            var keyCode = e.which ? e.which : e.keyCode
            var ret = ((keyCode >= 48 && keyCode <= 57) || specialKeys.indexOf(keyCode) != -1);

            $(".error").css("Average", ret ? "none" : "inline");
            return ret;
        });
        $("#Amount").bind("paste", function (e) {
            return false;
        });
        $("#Amount").bind("drop", function (e) {
            return false;
        });
    }

</script>
