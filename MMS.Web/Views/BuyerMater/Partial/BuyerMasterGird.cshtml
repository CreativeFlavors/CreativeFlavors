@model MMS.Web.Models.BuyerMaserModel.BuyerMasterModel
@using MMS.Core.Entities
@{
    MMS.Repository.Managers.CountryManager countryManager = new MMS.Repository.Managers.CountryManager();
    CountryMaster countryMaster = new CountryMaster();
    MMS.Repository.Managers.CurrencyManager currencyManager = new MMS.Repository.Managers.CurrencyManager();
    CurrencyMaster currencyMaster = new CurrencyMaster();
    MMS.Repository.Managers.AgentManager agentManager = new MMS.Repository.Managers.AgentManager();
    AgentMaster agentMaster = new AgentMaster();
    
}
<div class="veh-tablewrap">
    <div class="veh-tablecont">
        <div id="sortMsg" style="text-align: center; color: Red;"></div>
        <div class="table-responsive table-td-padding padding-lr-6px table-row-bg">
            <table class="veh-table sep-table-style table" id="empTable">
                <thead>
                    <tr class="color-code-top-btn">
                        <td colspan="13">
                            <input type="text" id="SeaarchID" placeholder="Search.." /><input type="button" value="Add" onclick="Add()">
                            <input type="button" value="Search" onclick="Search()">
                        </td>
                    </tr>
                    <tr>
                        <th class="veh-1">
                            Si. No
                        </th>
                        <th class="veh-1">
                            BuyerCode
                        </th>
                        <th class="veh-2">
                            Buyer Full Name
                        </th>
                        <th class="veh-3">
                            Buyer Short Name
                        </th>
                        <th class="veh-4">
                            Buyer Address
                        </th>
                        <th class="veh-5">
                            Buyer Country
                        </th>
                        <th class="veh-6">
                            Buyer Currency
                        </th>
                        <th class="veh-7">
                            Agent Name
                        </th>
                        <th class="veh-8">
                            Agent Address
                        </th>
                        <th class="veh-10">
                            Agent Country
                        </th>
                        <th class="veh-11">
                            Agent Currency
                        </th>
                        <th class="veh-12">
                            Edit / Delete
                        </th>
                    </tr>
                </thead>
                @if (Model.BuyerMasterList != null && Model.BuyerMasterList.Count > 0)
            {
                int count = 1;
                <tbody>

                    @foreach (var BuyerMaster in Model.BuyerMasterList)
                    {
                        countryMaster = countryManager.GetCountryMasterId(BuyerMaster.Country);
                        currencyMaster = currencyManager.GetCurrentMasterId(BuyerMaster.Currency);

                        agentMaster = agentManager.GetAgentMasterId(BuyerMaster.AgentName);

                        string address = BuyerMaster.BuyerAddress1 + ", " + BuyerMaster.BuyerAddress2 + ", " + BuyerMaster.BuyerPincode;
                        string AggentAddress = BuyerMaster.AgentAddress1 + ", " + BuyerMaster.AgentAddress2 + ", " + BuyerMaster.AgentPincode;
                <tr>
                    <td class="veh-1">@count</td>
                    <td class="veh-2" onclick="" style="width: 22%;">@BuyerMaster.BuyerCode</td>
                    <td class="veh-3" style="width: 22%;">@BuyerMaster.BuyerFullName</td>
                    <td class="veh-4" style="width: 22%;">@BuyerMaster.BuyerShortName</td>
                    <td class="veh-5" style="width: 22%;">@address</td>
                    <td class="veh-6">@countryMaster.LongCountryName</td>
                    <td class="veh-7">@currencyMaster.LongForm</td>
                    <td class="veh-8">@agentMaster.AgentFullName</td>
                    <td class="veh-9">@AggentAddress</td>
                    <td class="veh-10">@BuyerMaster.AgentCountry</td>
                    <td class="veh-11">@BuyerMaster.AgentCurrency</td>

                    <td class="veh-1 edit-del-wrap">
                        <a href="javascript:void(0)" onclick="Edit('@BuyerMaster.BuyerMasterId')" class="watchlist-edit" title="Edit"></a>
                        <a href="javascript:void(0)" id="DeleteVehicleWatchList" onclick="Delete('@BuyerMaster.BuyerMasterId')" class="watchlist-delete" title="Delete"></a>

                    </td>
                </tr>
                        count++;
                    }


                </tbody>
                <tfoot class="footer-pager">
                    <tr>
                        <td colspan="4">
                            <div id="pager">
                                <form>
                                    <img src="@Url.Content("~/Content/images/first.png")" class="first" />
                                    <img src="@Url.Content("~/Content/images/prev.png")" class="prev" />
                                    <input type="text" class="pagedisplay" />
                                    <img src="@Url.Content("~/Content/images/next.png")" class="next" />
                                    <img src="@Url.Content("~/Content/images/last.png")" class="last" />
                                    <select class="pagesize">
                                        <option selected="selected" value="5">5</option>
                                        <option value="10">10</option>
                                        <option value="20">20</option>
                                        <option value="30">30</option>
                                        <option value="40">40</option>
                                    </select>
                                </form>
                            </div>

                        </td>

                    </tr>

                </tfoot>

            }
            
            </table>
            @if (Model.BuyerMasterList != null && Model.BuyerMasterList.Count == 0)
            {
                <div style="color: red; font-size: 16px; text-align: center; width: 100%;">No Records Found</div>
            }
        </div>
        </div>

    <div id="EditColorPartial">
        @Html.Partial("Partial/BuyerMasteDetails", Model)
    </div>


</div>


<script>
    $(document).ajaxStart(function () {
        $(".loader-overlay").css("display", "block");
    });

    $(document).ajaxComplete(function () {
        $(".loader-overlay").css("display", "none");
    });
    $(window).load(function () {
        $('.loader-overlay').fadeOut('fast');
    });

    function Search() {
        $.ajax({
            type: "POST",
            url: ' @Url.Action("Search", "BuyerMater")',
            data: { filter: $('#SeaarchID').val() },
            success: function (data) {
                 
                $(".veh-tablewrap").html(data);
                $(".veh-tablewrap").show();
                $('#DivShow').hide();
                $('#EditColorPartial').hide();
            }
        });
    }
   
    function Cancel() {
       
        location.reload();
    }
    function Add() {
        $('.veh-tablecont').hide();
        $.ajax({
            type: "POST",
            url: ' @Url.Action("BuyerMasteDetails", "BuyerMater")',
            data: { BuyerMasterId: 0 },
            success: function (data) {
                $("#EditColorPartial").html(data);
                $("#EditColorPartial").show();
            }
        });

    }
    function Edit(arg) {
        $('.veh-tablecont').hide();
        $.ajax({
            type: "POST",
            url: ' @Url.Action("BuyerMasteDetails", "BuyerMater")',
            data: { BuyerMasterId: arg },
            success: function (data) {
                $("#EditColorPartial").html(data);
                $("#EditColorPartial").show();
            }
        });

    }
    function Delete(arg) {
        var answer = confirm("Are you sure want to delete?");
        if (answer) {
            $.ajax({
                type: 'POST',
                url: ' @Url.Action("Delete", "BuyerMater")',
                data: { BuyerMasterId: arg },
                success: function (data) {
                    if (data == "Success") {
                        alert('Deleted Successfully.');
                        location.href = "/BuyerMater/BuyerMater";
                        return false;
                    }
                    else {
                        alert('Color Details deletion failed.');
                    }

                },
                error: function (ex) {
                    alert('This Color Already Exist in the database.');
                }
            });
        }
        else {
            return false;
        }
    }


</script>
