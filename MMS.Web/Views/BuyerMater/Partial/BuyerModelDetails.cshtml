@model MMS.Web.Models.BuyerMaserModel.BuyerModels
@using MMS.Repository.Managers
@using MMS.Core.Entities
@{
    int id = Model.BuyerModelID;
    Session["BuyerModelID"] = id;
   
}


<div class="right-form-section clearfix">
    <form class="form-inline" role="form">
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12">
                    <h3>Buyer Model</h3>
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                                <label class="form-label" for="text">Buyer Code</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                @Html.HiddenFor(m => m.BuyerModelID)
                                @Html.TextBoxFor(m => m.BuyerModelCode, new { @class = "form-control text-field",@readonly="true" })
                            </div>
                        </div>
                    </div>
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                                <label class="form-label" for="text">Buyer Model</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                @Html.TextBoxFor(m => m.BuyerModelName, new { @class = "form-control text-field" })
                            </div>
                        </div>
                    </div>
                    <div class="field-section">
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 stage_lable_sec">
                                <label class="form-label" for="text">Remarks</label>
                            </div>
                            <div class="col-md-7 col-sm-7 col-lg-7 col-xs-12">
                                @Html.TextBoxFor(m => m.Remarks, new { @class = "form-control text-field" })
                            </div>
                        </div>
                    </div>
                </div>                                
            </div>


            <div class="row">
                <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12 text-center" style="margin: 15px 0px;">                    
                    <input type="button" onclick="Cancel()" class="btn btn-default btn-style width-78" style="cursor: pointer;" title="Back" value="Back">
                    @if (Model != null && Model.BuyerModelID != 0)
                    {
                        <input type="button" onclick="Update()" class="btn btn-default btn-style width-78" style="cursor: pointer;" id="BuyerMasterId" title="Update" value="Update">
                    }
                    else
                    {
                        <input type="button" onclick="Save()" class="btn btn-default btn-style width-78" style="cursor: pointer;" title="Save" value="Save">
                    }
                    <input type="button" onclick="Clear()" class="btn btn-default btn-style width-78" style="cursor: pointer;" title="Clear" value="Clear">
                </div>
            </div>
        </div>
        </form>
    </div>

<script>
    $(document).ajaxStart(function () {
        $(".loader-overlay").css("display", "block");
    });

    $(document).ajaxComplete(function () {
        $(".loader-overlay").css("display", "none");
    });
    $(window).load(function () {
        $('.loader-overlay').fadeOut('fast');
    });

</script>

