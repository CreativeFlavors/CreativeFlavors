@{
    ViewBag.Title = "Leather Size";
    Layout = "~/Views/Shared/_Layout.cshtml";

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/FormStyle.css" rel="stylesheet" />
}

<script>
    
    $(document).ready(function () {
        $(document).ajaxStart(function () {
            $(".loader-overlay").css("display", "block");
        });

        $(document).ajaxComplete(function () {
            $(".loader-overlay").css("display", "none");
        });
        $(window).load(function () {
            $('.loader-overlay').fadeOut('fast');
        });

        $("#EditColorPartial").hide();


    });
    function Save() {
        if ($('#Width').val() == "") {
            $('#Width').css('border-color', 'red');
            $('#Width').focus();
            alert("Please Enter Width.");
            return false;           
        }
        else {
            $('#Width').css('border-color', '');
        }
        if ($('#Length').val() == "") {
            $('#Length').css('border-color', 'red');
            $('#Length').focus();
            alert("Please Enter Length.")
            return false;                      
        }
        else {
            $('#Length').css('border-color', '');
        }
       
        if ($('#Average').val() == "") {
            $('#Average').css('border-color', 'red');
            $('#Average').focus();
            alert("Please Enter Average.")
            return false;                      
        }
        else {
            $('#Average').css('border-color', '');
        }
        $.ajax({
            type: 'POST',
            url: '/LeatherSize/LeatherSize',
            data: {
                Length: $('#Length').val(),
                Width: $('#Width').val(),
                Average: $('#Average').val()
            },
            success: function (data) {
                if (data.LeatherSizeMasterId != "" || data.LeatherSizeMasterId != 0) {
                    alert('Saved Successfully.');
                    location.href = "/LeatherSize/LeatherSize";
                    return false;
                }
                else {
                    alert('Save process Failed.');
                    location.href = "/LeatherSize/LeatherSize";
                    return false;
                }

            },
            error: function (ex) {
                alert('Already Exist in the database.');
            }
        });
    }
    function Update(arg) {
        if ($('#Width').val() == "") {
            $('#Width').css('border-color', 'red');
            $('#Width').focus();
            alert("Please Enter Width.")
            return false;           
        }
        else {
            $('#Width').css('border-color', '');
        }
        if ($('#Length').val() == "") {
            $('#Length').css('border-color', 'red');
            $('#Length').focus();
            alert("Please Enter Length.")
            return false;            
        }
        else {
            $('#Length').css('border-color', '');
        }

        if ($('#Average').val() == "") {
            $('#Average').css('border-color', 'red');
            $('#Average').focus();
            alert("Please Enter Average.")
            return false;            
        }
        else {
            $('#Average').css('border-color', '');
        }
        $.ajax({
            type: 'POST',
            url: '/LeatherSize/Update',
            data: {
                Length: $('#Length').val(),
                Width: $('#Width').val(),
                Average: $('#Average').val(), 
                LeatherSizeMasterId: $('#LeatherSizeMasterId').val()
            },
            success: function (data) {
                if (data.LeatherSizeMasterId != "" || data.LeatherSizeMasterId != 0) {
                    alert('Updated Successfully.');
                    location.href = "/LeatherSize/LeatherSize";
                    return false;
                }
                else {
                    alert('Updation failed.');
                    location.href = "/LeatherSize/LeatherSize";
                    return false;
                }

            },
            error: function (ex) {
                alert('Already Exist in the database.');
            }
        });
    }
</script>
<h2 class="content-title">Leather Size Master</h2>
<div style="width: 100%; float: left;">

    <div class="loader-overlay" style="position:fixed;left:0;right:0;top:0;bottom:0;margin:auto;width:100%;height:100%;background:rgba(0,0,0,0.8);z-index:99;">
        <div id="spinner" style="position:relative;height:64px;width:64px;margin:auto;top:50%;">
            <img src="~/Content/Images/round.gif" id="imgLoading" alt="Loading..." />
        </div>
    </div>
    <div id="tabVehicleWatchList">
        @Html.Action("LeatherSizeGrid", "LeatherSize")
    </div>
</div>
