    }
    $("#Reduce_Piece").on("change", function () {
        var Extra_Piece = $("#Extra_Piece").val();
        var Reduce_Piece = $("#Reduce_Piece").val()
        if (Extra_Piece < Reduce_Piece)
        {
            $("#Reduce_Piece").val('');
