                        $('#sizeRangeTable tbody tr:last').append("<td ><input type='text' class='Qty' onchange='CalculateTotal(this)' id='Qty" + i + "' value='0'  /</td>");
                        count++;
                    }
                }
            },
            error: function (ex) {
                alert('This Color Already Exist in the database.');
            }
        });
    }
