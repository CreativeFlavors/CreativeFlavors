                    success: function (data) {
                        if (data.Job_Lether_to_lether_id != "" || data.Job_Lether_to_lether_id != 0) {
                            alert('Saved Successfully.');
                           // location.href = "/ProductionJobwork_/ProductionJobworkMaster";
