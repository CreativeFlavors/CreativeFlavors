                    Leather_Pairs=true;
                    component_Pairs=false;
                    Upper_Fullshoes = false;
                }
                else if (bool == "1")
                {
                    Leather_Pairs = false;
                    component_Pairs = true;
                    Upper_Fullshoes = false;
                }
                else if (bool == "2")
                {
                    Leather_Pairs = false;
                    component_Pairs = false;
                    Upper_Fullshoes = true;
                }
