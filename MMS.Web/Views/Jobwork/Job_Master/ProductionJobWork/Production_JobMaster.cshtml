                        Delivery_date: D_date,
                        Qty: $('#Qty').val(),
                        ComponentId: $("#ComponentId  option:selected").map(function () { return this.value }).get().join(','),
                        Qty_Uom: $('#Qty_Uom').val(),
                        Rate: $('#Rate').val(),
                        Value: $('#Value').val(),
