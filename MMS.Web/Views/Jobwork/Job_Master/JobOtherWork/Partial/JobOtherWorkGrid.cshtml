@model MMS.Web.Models.JobOtherWork.JobOtherWorkModel

@using MMS.Repository.Managers.JobWork
@{
    List<MMS.Data.StoredProcedureModel.JobOtherWorkList> JobOtherWorkList = new List<MMS.Data.StoredProcedureModel.JobOtherWorkList>();

}

<div class="veh-tablecont">
    <div class="header_list_tab  col-lg-12 col-md-12 col-sm-12  col-xs-12">
        <div class="col-lg-12 col-md-12 col-sm-12 col-12 no-padding">
            <div class="list_tab">
                <div class="title">
                    List
                </div>
                <button class="rt_add" onclick="AddJobOtherWork()">Add</button>
            </div>

        </div>
        <div class="col-lg-6 col-md-12 col-sm-12  col-xs-12">
            <div class="button_tab  col-lg-12 col-md-12 col-sm-12 col-12 no-padding">

            </div>
        </div>
    </div>

    <div class="process_master col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="col-xs-12 block-section">
            <div id="no-more-tables" class="col-xs-12 no-padding">
                <table id="example" class="col-md-12 table-striped table-condensed cf table-change home_dahboard home_process">
                    <thead>
                        <tr>
                            <th>SI.No</th>
                            <th>Job Work Code</th>
                            <th>Job Work Name</th>
                            <th>Process Material</th>
                            <th>Machine Name</th>
                            <th>Quantity</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="common-table-head">
                        @if (Model.JobOtherWorkList != null)
                        {
                            int count = 1;
                            if (JobOtherWorkList == null || JobOtherWorkList.Count == 0)
                            {
                                foreach (var Job in Model.JobOtherWorkList)
                                {
                                    <tr>
                                        <td data-title="Si.No">@count</td>
                                        <td data-title="JW Code">@Job.OtherJobWork_Code</td>
                                        <td data-title="JW Name">@Job.JobWorkName</td>
                                        <td data-title="Process">@Job.ProcessName</td>
                                        <td data-title="Machine">@Job.MachineName</td>
                                        <td data-title="Quantity">@Job.Quantity</td>


                                        <td data-title="Action">
                                            <span class="action-icons">

                                                <a><img onclick="Edit('@Job.OtherJobWork_Id')" src="~/Scripts/Jobwork/images/edit.png"></a>
                                                <img onclick="Delete('@Job.OtherJobWork_Id')" src="~/Scripts/Jobwork/images/delete.png">
                                            </span>
                                        </td>
                                    </tr>
                                    count++;
                                }
                            }
                        }
                        
                    </tbody>

                </table>
            </div>
        </div>

    </div>
</div>
<div id="OtherJobWorkPartial">

</div>



