@using MMS.Core.Entities
@model MMS.Web.Models.Production.ProductionModel
@using MMS.Repository.Managers


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alain Dashboard</title>
    <link rel="stylesheet" href="./css/bootstrap.min.css">
    <link rel="stylesheet" href="./css/custom.css">
    <link rel="stylesheet" href="./css/responsive.css">
    <link href="~/Content/css1/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="./css/variables.css">
    <style>
        input[type=text] {
            padding: 12px;
            font-size: 17px;
            border: 1px solid grey;
            width: 80%;
        }

        .buttonone {
            float: right;
            width: 20%;
            padding: 12px;
            background: #2196F3;
            color: white;
            font-size: 17px;
            border: 1px solid grey;
            border-left: none;
            cursor: pointer;
        }

        .page-item.active .page-link {
            z-index: 3;
            color: #fff;
            background-color: #4472C4;
            border-color: #0d6efd;
        }
    </style>

</head>
<body>
    <div class="main-page">


        <!-- page-contents here -->

        <div class="manage_customers">
            <div class="d-flex justify-content-between align-items-center manage_customers_head">
                <div class="manage_customers_main_head">
                    <h6 class="font-20">Manage Products</h6>
                </div>
                <div>
                    @*<button type="button" class="manage_customers_btn font-15">
                <a href="AddEditSubCustomersPage-1.html">ADD Products</a>
            </button>*@

                    <button class="btn btn-success" id="Addproduction" title="Add Production" style="margin-left:1128px">
                    <a href="/Production/ProductionDetails"</a>ADD Production</button>

                </div>

                @*<div id="transaction_reports_search4_container" class="reports_search_container_btn">
                    <button type="button" class="manage_customers_btn font-15" id="add">
                        <a href="/SalesOrder/SalesOrderDetails">ADD </a>

                    </button>
                </div>*@
            </div>
            <div class="table-responsive manage_customers_table_responsive">
                <div class="customer_manage_search_containers" style="width:40%;">
                    <input type="text" placeholder="Search by Product Name" id="SeaarchID" name="search2">
                    <button class="buttonone" onclick="Search()" title="Filter" type="submit"><i class="fa fa-search"></i></button>

                </div>
                @*<div id="transaction_reports_search4_container" class="reports_search_container_btn">
                        <button type="button" class="btn btn-primary">
                            <a href="##" id="filter" onclick="Search()">FILTER</a>
                        </button>
                    </div>*@

                <div class="manage_customers_table_in_responsive">
                    <table class="table table-striped text-center">
                        <thead>
                            <tr class="font-16">
                                <th scope="col">
                                    <span>S.No</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>
                                <th scope="col">
                                    <span>Product Name</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>
                                <th scope="col">
                                    <span>Production Code</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>
                                <th scope="col">
                                    <span>Production Qty</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>

                                @*<th scope="col">
                                    <span>Prodct Desc</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>
                                <th scope="col">
                                    <span>Tax Code</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>
                                <th scope="col">
                                    <span>UOM</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>
                                <th scope="col">
                                    <span>Price</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>
                                <th scope="col">
                                    <span>BOM</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>*@
                                <th scope="col"><span>STATUS</span></th>
                            </tr>
                        </thead>
                        @if (ViewBag.Productslist != null && ViewBag.Productslist.Count > 0)
                        {
                            int count = 1;
                            <tbody>
                                @foreach (var item in ViewBag.Productslist)
                                {

                                    <tr class="font-14">
                                        <td>@count</td>
                                        <td>@item.materailCategory.CategoryName</td>
                                        <td>@item.ProductCode</td>
                                        <td>@item.ProductName</td>
                                        <td>@item.ProductDesc</td>
                                        <td>@item.TaxTypeMaster.TaxCode</td>
                                        <td>@item.UomMaster.LongUnitName</td>
                                        <td>@item.Price</td>
                                        @if (item.Bom != null)
                                        {
                                            <td>@item.Bom.BomNo</td>
                                        }
                                        else
                                        {
                                            <td>@item.BomNo</td>
                                        }
                                        <td class="veh-1 edit-del-wrap">
                                            <a href="javascript:void(0)" onclick="Edit('@item.ProductId')" class="watchlist-edit" title="Edit"><img src="~/Content/assets/images/edit-icon.png" /></a>
                                            <a href="javascript:void(0)" id="DeleteVehicleWatchList" onclick="Delete('@item.ProductId')" class="watchlist-delete" title="Delete"><img src="~/Content/assets/images/delete-icon.png" /></a>
                                            @*<td><button class="btn btn-success" id="paynow" onclick="paynow('@item.Id')" title="PayNow">Pay Now</button></td>*@
                                        </td>


                                    </tr>
                                    count++;
                                }

                            </tbody>

                        }
                    </table>
                </div>
                <div class="row manage_customer_show">
                    <div class="font-14 manage_customer_show_I col-xl-6">
                        <span>Showing </span>
                        <select class="form-select font-16" name="manage_customer_show_content" id="manage_customer_show_no" aria-label="select example">
                            <option value="5" @(ViewBag.PageSize == 5 ? "selected" : "")>5</option>
                            <option value="10" @(ViewBag.PageSize == 10 ? "selected" : "")>10</option>
                            <option value="15" @(ViewBag.PageSize == 15 ? "selected" : "")>15</option>
                            <option value="20" @(ViewBag.PageSize == 20 ? "selected" : "")>20</option>
                        </select>


                    </div>

                    <div class="col-xl-6 manage_customer_show_II">
                        <nav class="float-xl-end">
                            <ul class="pagination font-14">
                                <li class="page-item">
                                    <a href="##" id="previousPage" class="page-link">Previous</a>
                                </li>
                                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                {
                                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                        <a href="@Url.Action("ProductGrid", "Product", new { page = i })" class="page-link">@i</a>
                                    </li>
                                }
                                <li class="page-item">
                                    <a class="page-link" id="nextPage" href="##">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>

                </div>


            </div>

        </div>
    </div>


    <div id='myModal' class='modal'>
        <div class="modal-dialog">
            <div class="modal-content">
                <div id='details' class="myModalContent"></div>
            </div>
        </div>
    </div>



    <script src="~/Content/js/custom.js"></script>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="~/Content/js/bootstrap.bundle.min.js"></script>
