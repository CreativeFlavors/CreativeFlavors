@model IEnumerable<MMS.Web.Models.Salesorders>
@using MMS.Repository.Managers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/css1/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css1/custom.css" rel="stylesheet" />
    <link href="~/Content/css1/responsive.css" rel="stylesheet" />
    <link href="~/Content/css1/variables.css" rel="stylesheet" />
    <style>

        .page-item.active .page-link {
            z-index: 3;
            color: #fff;
            background-color: #4472C4;
            border-color: #0d6efd;
        }

        .manage_customers .table tr th, .manage_customers .table tr td, .common_Manage_subMerchant .table tr th, .common_Manage_subMerchant .table tr td {
            padding: 16px;
        }
    </style>
</head>
<body>

    <div class="main-page">
        <div id="transaction_report" class="reports common_Manage_subMerchant">
            <nav class="reports_customers_head" aria-label="breadcrumb">
                <ol class="breadcrumb font-20">
                    <li class="breadcrumb-item " aria-current="page">New Sales Order</li>
                </ol>
            </nav>

            <div class="table-responsive reports_table_responsive">
                <div class="d-flex justify-content-evenly">
                    <div class="form-floating">
                        <select id="buyerid" class="form-select">
                            @foreach (var item in MMS.Web.ExtensionMethod.HtmlHelper.BuyerName())
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                        <label for="floatingSelectGrid">Customer Name</label>
                    </div>

                    <div class="form-floating">
                        <select id="InvRefNumber" class="form-select">
                            @foreach (var item in MMS.Web.ExtensionMethod.HtmlHelper.invoisenoListdata())
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                        <label for="floatingSelectGrid">Quote Number</label>
                    </div>
                    <div class="form-floating">
                        <input type="date" class="form-control" id="InvDate" />
                        <label for="InvDate">From Date</label>
                    </div>
                    <div class="form-floating">
                        <input type="date" class="form-control" id="InvDueDate" />
                        <label for="InvDueDate">To Date</label>
                    </div>

                    <div id="transaction_reports_search4_container" class="reports_search_container_btn">
                        <button type="button" class="manage_customers_btn font-15" id="Search">
                            FILTER
                        </button>
                    </div>

                    <div id="transaction_reports_search4_container" class="reports_search_container_btn">
                        <a href="/SalesOrder/SalesOrderDetails">
                            <button type="button" class="manage_customers_btn font-15" id="add">
                                ADD
                            </button>
                        </a>
                    </div>
                </div>
                <div class="manage_customers_table_in_responsive" id="form">
                    <table class="table table-striped text-center">
                        <thead>
                            <tr class="font-16">
                                <th scope="col">
                                    <span id="add">Si.No</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>
                                <th scope="col">
                                    <span>Buyer Name</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>
                                <th scope="col">
                                    <span>Purchase Item</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>
                                <th scope="col">
                                    <span>Qty</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>
                                <th scope="col">
                                    <span>UOM</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>
                                <th scope="col">
                                    <span>Discount %</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>
                                <th scope="col">
                                    <span>Sub Total</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>

                                <th scope="col">
                                    <span>Tax Amount</span>
                                    <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>
                                <th scope="col">
                                    <span>Total Price</span>  <span>
                                        <img src="~/Content/assets/images/sort-arrows-couple-pointing-up-and-down.png" />
                                    </span>
                                </th>
                                <th scope="col">
                                    <span>Stock/Qty</span>
                                </th>
                            </tr>
                        </thead>
                        @if (Model != null && Model.Count() > 0)
                        {
                            int count = 1;
                            <tbody>
                                @foreach (var i in Model)
                                {

                                    <tr class="font-14">
                                        <td class="veh1-5">@count</td>
                                        <td class="veh1-5" style="width: 12%;">@i.BuyerMaster.BuyerFullName</td>
                                        <td class="veh1-5" style="width: 12%;">@i.product.ProductName</td>
                                        <td class="veh1-5" style="width: 12%;">@i.quantity</td>
                                        <td class="veh1-5" style="width: 12%;">@i.UomMaster.LongUnitName</td>
                                        <td class="veh1-5" style="width: 12%;">@i.discountvalue</td>
                                        <td class="veh1-5" style="width: 12%;">@i.Subtotal</td>
                                        <td class="veh1-5" style="width: 12%;">@i.TaxValue</td>
                                        <td class="veh1-5" style="width: 12%;">@i.Grandtotal</td>
                                        <td class="veh1-5" style="width: 12%;" onclick="Check('@i.SalesorderId')"> <button class="btn btn-secondary" id="Check">Check</button></td>

                                    </tr>
                                    count++;
                                }

                            </tbody>

                        }
                    </table>
                </div>

                <div class="row manage_customer_show">
                    <div class="font-14 manage_customer_show_I col-xl-6">
                        <span>Showing </span>
                        <select class="form-select font-16" name="manage_customer_show_content" id="manage_customer_show_no" aria-label="select example">
                            <option value="5" @(ViewBag.PageSize == 5 ? "selected" : "")>5</option>
                            <option value="10" @(ViewBag.PageSize == 10 ? "selected" : "")>10</option>
                            <option value="15" @(ViewBag.PageSize == 15 ? "selected" : "")>15</option>
                            <option value="20" @(ViewBag.PageSize == 20 ? "selected" : "")>20</option>
                        </select>
                    </div>

                    <div class="col-xl-6 manage_customer_show_II">
                        <nav class="float-xl-end">
                            <ul class="pagination font-14">
                                <li class="page-item">
                                    <a href="##" id="previousPage" class="page-link">Previous</a>
                                </li>
                                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                {
                                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                        <a href="@Url.Action("SalesOrderMaster", "SalesOrder", new { page = i })" class="page-link">@i</a>
                                    </li>
                                }
                                <li class="page-item">
                                    <a class="page-link" id="nextPage" href="##">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>


                </div>

            </div>

        </div>

        <div id='myModal' class='modal'>
            <div class="modal-dialog">
                <div class="modal-content">
                    <div id='details' class="myModalContent"></div>
                </div>
            </div>
        </div>

        <script src="~/Content/js/custom.js"></script>


        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

        <script src="~/Content/js/bootstrap.bundle.min.js"></script>
        <script>
  $(document).ready(function() {
    $('#manage_customer_show_no').change(function() {
        var pageSize = parseInt($(this).val());
        window.location.href = "@Url.Action("SalesOrderMaster", "SalesOrder")?pageSize=" + pageSize;
    });

    $('#previousPage').click(function(e) {
        e.preventDefault();
        var currentPage = parseInt('@ViewBag.CurrentPage');
        if (currentPage > 1) {
            var previousPage = currentPage - 1;
            window.location.href = "@Url.Action("SalesOrderMaster", "SalesOrder")?page=" + previousPage + "&pageSize=" + parseInt('@ViewBag.PageSize');
        }
    });

    $('#nextPage').click(function(e) {
        e.preventDefault();
        var currentPage = parseInt('@ViewBag.CurrentPage');
        var totalPages = parseInt('@ViewBag.TotalPages');
        if (currentPage < totalPages) {
            var nextPage = currentPage + 1;
            window.location.href = "@Url.Action("SalesOrderMaster", "SalesOrder")?page=" + nextPage + "&pageSize=" + parseInt('@ViewBag.PageSize');
        }
    });

});

            function Check(arg) {
                $('#myModal').hide();
                $.ajax({
                    type: 'GET',
                    url: '/SalesOrder/SalesOrderQtycheck',
                    data: { id: arg },
                    success: function (values) {
                        $('#details').html(values);

                        var options = {
                            backdrop: 'static',
                            keyboard: false
                        };

                        $('#myModal').modal(options);
                        $('#myModal').modal('show');

                    }
                });
            }
        </script>
        <script>
            $(document).on("click", "#Search", function () {
                var buyerid = $("#buyerid").val();
                $.ajax({
                    type: 'GET',
                    url: '/SalesOrder/searchs',
                    data: { id: buyerid },
                    contentType: 'application/json',
                    success: function (data) {
                        $("tbody").empty();
                        var count = 1;
                        $.each(data, function (i, item) {
                            $("tbody").append(`
                                                                           <tr class="font-14">
                                                                           <td class="veh1-5">${count}</td>
                                                                           <td class="veh1-5" style="width: 12%;">${item.BuyerMaster.BuyerFullName}</td>
                                                                           <td class="veh1-5" style="width: 12%;">${item.product.ProductName}</td>
                                                                           <td class="veh1-5" style="width: 12%;">${item.quantity}</td>
                                                                           <td class="veh1-5" style="width: 12%;">${item.UomMaster.LongUnitName}</td>
                                                                           <td class="veh1-5" style="width: 12%;">${item.discountvalue}</td>
                                                                           <td class="veh1-5" style="width: 12%;">${item.Subtotal}</td>
                                                                           <td class="veh1-5" style="width: 12%;">${item.TaxValue}</td>
                                                                           <td class="veh1-5" style="width: 12%;">${item.Grandtotal}</td>
                                                                           <td class="veh1-5" style="width: 12%;" onclick="Check('${item.SalesorderId}')"> <button class="btn btn-secondary" id="Check">Check</button></td>
                                                                           </tr>
                                                                            `);
                            count++;
                        });
                    },
                });
            });
        </script>
        <script>
            $(window).on("load", function () {
                $(".report-inner-section").addClass("transection");
                $("#order").attr('checked', true);
            });
        </script>


</body>
</html>
